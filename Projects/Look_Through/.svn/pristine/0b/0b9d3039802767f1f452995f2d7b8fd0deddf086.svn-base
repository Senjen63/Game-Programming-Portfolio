GraphicsBuffer* GraphicsBufferManager::getGraphicsBuff( string name )
{
	auto iter = mGBs.find(name);
	if (iter != mGBs.end())
		return iter->second;
	else
		return nullptr;
}

void GraphicsBufferManager::deleteGraphicsBuff( string name )
{
	if (mGBs.find(name) != mGBs.end())
	{
		delete mGBs[name];
		mGBs.erase(name);
	}
}
