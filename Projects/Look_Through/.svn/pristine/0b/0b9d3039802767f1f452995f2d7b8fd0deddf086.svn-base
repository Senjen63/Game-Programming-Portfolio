#include "GraphicsBufferManager.h"
#include "Game.h"

void GraphicsBufferManager::init( string fileName )
{
	ifstream fin(fileName);
	if (fin.good())
	{
		string name, key;
		while (!fin.eof())
		{
			fin >> key >> name;
			addGraphicsBuff("Sprites\\" + name, key);
		}
	}
	fin.close();
}

void GraphicsBufferManager::cleanup()
{
	// don't understand how : works but it works so :/
	for ( auto iter : mGBs )
	{
		GraphicsBuffer* pGB = iter.second;
		delete pGB;
	}
	mGBs.clear();
}

