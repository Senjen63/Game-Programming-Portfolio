#include "hud.h"
#include "game.h"
#include "fps.h"
#include "score.h"

HUD::HUD()
{

}

void HUD::drawHUD(float frameRate, int score)
{
	EventSystem* pEventSystem = EventSystem::getInstance();
	pEventSystem->fireEvent(FPS(frameRate));
	pEventSystem->fireEvent(Score(score));
}