#include "GraphicsBuffer.h"

using namespace std;

ALLEGRO_BITMAP* GraphicsBuffer::getBuffer()
{
	return mpBuffer;
}

int GraphicsBuffer::getHeight()
{
	return al_get_bitmap_height(mpBuffer);
}

int GraphicsBuffer::getWidth()
{
	return al_get_bitmap_width(mpBuffer);
}

GraphicsBuffer::GraphicsBuffer(int width, int height)
{
	mpBuffer = al_create_bitmap(width, height);
	assert(mpBuffer);
	mOwnsBuffer = true;
}

GraphicsBuffer::GraphicsBuffer(const string& assetPath)
{
	mpBuffer = al_load_bitmap(assetPath.c_str());
	assert(mpBuffer);
	mOwnsBuffer = true;
}

GraphicsBuffer::GraphicsBuffer(ALLEGRO_BITMAP* bitMap)
{
	mpBuffer = bitMap;
	mOwnsBuffer = false;
}

GraphicsBuffer::~GraphicsBuffer()
{
	if (mOwnsBuffer)
	{
		al_destroy_bitmap(mpBuffer);
	}
}