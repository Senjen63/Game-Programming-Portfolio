InputSystem::InputSystem()
{
	
}

InputSystem::~InputSystem()
{
	delete &mState;
	delete& mMouseState;
}

void InputSystem::Init()
{
	al_install_keyboard();
	al_install_mouse();
	al_get_keyboard_state(&mState);
	al_get_mouse_state(&mMouseState);
}

void InputSystem::Cleanup()
{
	
}

void InputSystem::getKeyState()
{
	mSpeeding = al_key_down(&mState, mKeyCode(F_KEY));
	mSlowing = al_key_down(&mState, mKeyCode(S_KEY));
	mSwitching = al_key_down(&mState, mKeyCode(ENTER_KEY));
	mShouldStop = al_key_down(&mState, mKeyCode(ESCAPE_KEY));
}

void InputSystem::getMouseState()
{
	al_get_mouse_state(&mMouseState);
	if (mMouseState.buttons & 1)
	{
		mPos = Vector2D(mMouseState.x, mMouseState.y);
	}
}