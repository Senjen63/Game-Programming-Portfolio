#pragma once
#include <allegro5/allegro.h>

#include "Trackable.h"

enum class InputKeyCode
{
	F_KEY = ALLEGRO_KEY_F,
	S_KEY = ALLEGRO_KEY_S,
	ENTER_KEY = ALLEGRO_KEY_ENTER,
	ESC_KEY = ALLEGRO_KEY_ESCAPE
};

enum class InputMouseCode
{
	LEFT_MOUSE = 1,
	RIGHT_MOUSE = 2,
	MID_MOUSE = 4
};

class InputSystem : public Trackable
{
public:
	InputSystem();
	~InputSystem();

	void init();
	void cleanup();

	//both enum and int accessors are included for completeness
	bool getKeyState(int keyCode);
	bool getKeyState(InputKeyCode keyCode);
	bool getMouseState(int mouseCode);
	bool getMouseState(InputMouseCode mouseCode);
	int getMouseX();
	int getMouseY();

private:

};
