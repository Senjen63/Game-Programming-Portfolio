#include "Color.h"

Color::Color() {
	mRed = 0;
	mGreen = 0;
	mBlue = 0;
	mAlpha = 255;
	mColor = al_map_rgba(mRed, mGreen, mBlue, mAlpha);
}

Color::Color(int r, int g, int b)
{
	mRed = r;
	mGreen = g;
	mBlue = b;
	mAlpha = 255;
	mColor = al_map_rgba(mRed, mGreen, mBlue, mAlpha);
}

Color::~Color()
{
	mRed = 0;
	mGreen = 0;
	mBlue = 0;
	mAlpha = 0;
}

int Color::getR()
{
	return mRed;
}
int Color::getG()
{
	return mGreen;
}
int Color::getB()
{
	return mBlue;
}
int Color::getA()
{
	return mAlpha;
}


