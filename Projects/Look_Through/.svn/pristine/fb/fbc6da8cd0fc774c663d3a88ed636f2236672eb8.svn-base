#include "MenuButton.h"
#include "MenuManager.h"

MenuButton::MenuButton(std::pair<float, float>location, std::pair<float, float>scale, string text, string animationDataFilePath, string menuName) : Button(location, scale, text, animationDataFilePath)
{
	mMenuName = menuName;
}

MenuButton::~MenuButton()
{

}

void MenuButton::onClicked()
{
	string tempString = mMenuName;
	Game::getGame()->getMenuManager()->unloadMenu();
	Game::getGame()->getMenuManager()->loadMenu(tempString);
}