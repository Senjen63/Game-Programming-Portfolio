#include "Sprite.h"
#include "GraphicsBuffer.h"
#include "Vector2D.h"
#include <allegro5/allegro5.h>

Sprite::Sprite(GraphicsBuffer* gb)
{
	mpBuffer = gb;
	mLocation.setX(0);
	mLocation.setY(0);

	mHeight = gb->getBitmapHeight();
	mWidth = gb->getBitmapWidth();
}

Sprite::~Sprite()
{
	delete mpBuffer;
	mpBuffer = nullptr;
}