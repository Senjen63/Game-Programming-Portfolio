#include "Sprite.h"

Sprite::Sprite(GraphicsBuffer* pBmp, Vector2D sourcePosition, Vector2D heightAndWidth)
{
	mpBmp = pBmp;
	mSourcePosition = sourcePosition;
	mHeightAndWidth = heightAndWidth;
}

Sprite::~Sprite()
{

}

GraphicsBuffer Sprite::getSpriteBuff()
{
	return *mpBmp;
}

Vector2D Sprite::getHeightAndWidth() 
{
	return mHeightAndWidth;
}

Vector2D Sprite::getSourcePosition() 
{
	return mSourcePosition;
}