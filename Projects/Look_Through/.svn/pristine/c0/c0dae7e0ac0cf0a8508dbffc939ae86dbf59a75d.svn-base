/*
A pointer to a specific part of a GraphicsBuffer

Data
• Pointer to the GraphicsBuffer which contains the bitmap
• Source loc (upper left-hand corner of where sprite begins)
• Width and height of sprite

Functions
• Constructor(s)/destructor
• Accessors( source loc, height, width, GraphicsBuffer )
*/

#pragma once
#include <Trackable.h>
#include <allegro5/allegro_image.h>
#include "GraphicsBuffer.h"
#include "Vector2D.h"

class Sprite : public Trackable
{
private:
	GraphicsBuffer* mpGraphicsBuffer;
	Vector2D mSourceLoc; //top left corner of sprite)
	Vector2D mWidthHeight;

public:
	Sprite(GraphicsBuffer* pBitmap, Vector2D sourcePos, Vector2D widthHeight);
	~Sprite();

	GraphicsBuffer* getGraphicsBufferSprite();

	Vector2D getWidthHeight();
	Vector2D getSourceLoc();

};
