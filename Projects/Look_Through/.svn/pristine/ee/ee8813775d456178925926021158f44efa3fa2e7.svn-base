#pragma once

#include "Trackable.h"
#include <allegro5/allegro.h>

class Vector2D;

enum KeyInputs
{
	KEY_ENTER = ALLEGRO_KEY_ENTER,
	KEY_ESCAPE = ALLEGRO_KEY_ESCAPE,
	KEY_SPACE = ALLEGRO_KEY_SPACE,
	KEY_UP = ALLEGRO_KEY_UP,
	KEY_LEFT = ALLEGRO_KEY_LEFT,
	KEY_DOWN = ALLEGRO_KEY_DOWN,
	KEY_RIGHT = ALLEGRO_KEY_RIGHT
};

enum MouseInputs
{
	LEFT_MOUSE_BUTTON = 1,
	RIGHT_MOUSE_BUTTON = 2,
	MIDDLE_MOUSE_BUTTON = 4
};

class InputSystem : public Trackable
{
private:

	ALLEGRO_EVENT_QUEUE* mpEventQueue;
		
public:

	InputSystem();
	~InputSystem();

	void init();
	void update();
	void cleanup();

	Vector2D getMousePosition();
	bool getCurrentInput(KeyInputs currentKeyInput);
	bool getCurrentInput(MouseInputs currentMouseInput);
};