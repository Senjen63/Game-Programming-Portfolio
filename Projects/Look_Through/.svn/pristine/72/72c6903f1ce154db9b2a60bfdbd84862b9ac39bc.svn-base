#include "Color.h"

/// <summary>
/// Creates a Color instance based off of an RGBa value.
/// </summary>
/// <param name="r">: Red value from 0-255.</param>
/// <param name="g">: Green value from 0-255.</param>
/// <param name="b">: Blue value from 0-255.</param>
/// <param name="a">(optional, default = 255): Alpha value from 0-255.</param>
Color::Color( const unsigned char r, const unsigned char g, const unsigned char b, const unsigned char a ) : r( r ), g( g ), b( b ), a( a )
{
}

Color::Color( const int r, const int g, const int b, const int a ) : r(static_cast< unsigned char >(r)), g(static_cast< unsigned char >(g)), b(static_cast< unsigned char >(b)), a(static_cast< unsigned char >(a))
{
}
