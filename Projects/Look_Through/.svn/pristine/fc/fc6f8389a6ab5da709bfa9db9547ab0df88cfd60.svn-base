#include "Font.h"
#include <allegro5/allegro.h>
#include <allegro5/allegro_font.h>
#include <allegro5/allegro_ttf.h>
#include <string>

using namespace std;

Font::Font(int fontSize, string fileName)
{
	this->mFontSize = fontSize;

	this->mpFont = al_load_ttf_font(("..\\..\\common\\assets\\" + fileName).c_str(), fontSize, 0);
}

Font::~Font()
{
	al_destroy_font(mpFont);
}