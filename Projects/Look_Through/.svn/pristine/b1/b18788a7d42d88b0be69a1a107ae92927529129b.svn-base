#include "GraphicsSystem.h"

GraphicsSystem::GraphicsSystem()
{
	mpDisplay = NULL;
}

GraphicsSystem::GraphicsSystem(int width, int height)
{
	mpDisplay = al_create_display(width, height);
	assert(mpDisplay);
}

GraphicsSystem::~GraphicsSystem()
{
	Cleanup();
}

bool GraphicsSystem::Init(int width, int height)
{
	if (!al_init())
	{
		cout << "error initting Allegro\n";
		system("pause");
		return 1;
	}
	if (!al_init_image_addon())
	{
		cout << "error - Image Add-on not initted\n";
		system("pause");
		return 1;
	}
	if (!al_init_font_addon())
	{
		cout << "error - Font Add-on not initted\n";
		system("pause");
		return 1;
	}
	if (!al_init_ttf_addon())
	{
		cout << "error - TTF Add-on not initted\n";
		system("pause");
		return 1;
	}
	if (!al_init_primitives_addon())
	{
		cout << "error - primitives Add-on not initted\n";
		system("pause");
		return 1;
	}
	if (!al_install_audio())
	{
		cout << "error - Audio Add-on not initted\n";
		system("pause");
		//return 1;
	}
	if (!al_init_acodec_addon())
	{
		cout << "error - Audio Codec Add-on not initted\n";
		system("pause");
		//return 1;
	}
	if (!al_reserve_samples(1))
	{
		cout << "error - samples not reserved\n";
		system("pause");
		//return 1;
	}
	
	mpDisplay = al_create_display(width, height);
	assert(mpDisplay);

	return 0;
}

void GraphicsSystem::Cleanup()
{
	al_destroy_display(mpDisplay);
}

//Accessors
int GraphicsSystem::getHeight()
{
	return al_get_display_height(mpDisplay);
}

int GraphicsSystem::getWidth()
{
	return al_get_display_width(mpDisplay);
}

ALLEGRO_DISPLAY* GraphicsSystem::getBackBuffer()
{
	return mpDisplay;
}

ALLEGRO_BITMAP* GraphicsSystem::getBitMap()
{
	return al_get_backbuffer(mpDisplay);
}


void GraphicsSystem::Flip()
{
	al_flip_display();
}

//Draw

void GraphicsSystem::Draw(GraphicsBuffer* pBuffer)
{
	al_draw_bitmap(pBuffer->getBitmap(), 0, 0, 0);
}

void GraphicsSystem::Draw(int x, int y, Sprite* pSprite, float scale)
{
	al_draw_scaled_bitmap(pSprite->getBuffer()->getBitmap(), pSprite->getX(), pSprite->getY(), pSprite->getWidth(), pSprite->getHeight(), x, y,
		pSprite->getWidth() * scale, pSprite->getHeight() * scale, 0);
}

void GraphicsSystem::Draw(int x, int y, Sprite* pSprite, int displayWidth, int displayHeight)
{
	//Draw in random location
	al_draw_bitmap_region(pSprite->getBuffer()->getBitmap(), x, y, pSprite->getWidth(), pSprite->getHeight(), 
		rand() % (displayWidth - pSprite->getWidth()), rand() % (displayHeight - pSprite->getHeight()), 0);
}

void GraphicsSystem::Draw(GraphicsBuffer* pTarget, GraphicsBuffer* pBuffer, int x, int y, float scale)
{
	ALLEGRO_BITMAP* oldBitmap = al_get_target_bitmap();

	al_set_target_bitmap(pTarget->getBitmap());
	al_draw_scaled_bitmap(pBuffer->getBitmap(), 0, 0, pBuffer->getWidth(), pBuffer->getHeight(), x, y, 
		pBuffer->getWidth() * scale, pBuffer->getHeight() * scale, 0);
}

void GraphicsSystem::Draw(GraphicsBuffer* pBuffer, int x, int y, float scale)
{
	al_set_target_bitmap(al_get_backbuffer(getBackBuffer()));
	al_draw_scaled_bitmap(pBuffer->getBitmap(), 0, 0, pBuffer->getWidth(), pBuffer->getHeight(), x, y, 
		pBuffer->getWidth() * scale, pBuffer->getHeight() * scale, 0);
}

void GraphicsSystem::Draw(GraphicsBuffer* pTarget, int x, int y, Sprite* pSprite, float scale)
{
	ALLEGRO_BITMAP* oldBitmap = al_get_target_bitmap();
	al_set_target_bitmap(pTarget->getBitmap());

	al_draw_scaled_bitmap(pSprite->getBuffer()->getBitmap(), pSprite->getX(), pSprite->getY(), pSprite->getWidth(), pSprite->getHeight(), x, y,
		pSprite->getWidth() * scale, pSprite->getHeight() * scale, 0);

	al_set_target_bitmap(oldBitmap);
}

//Write text
void GraphicsSystem::WriteText(float x, float y, Font* pFont, Color color, string text)
{
	al_draw_text(pFont->getFont(), color.getColor(), x, y, ALLEGRO_ALIGN_CENTER, text.c_str());
}
void GraphicsSystem::WriteText(GraphicsBuffer* pTarget, float x, float y, Font* pFont, Color color, string text)
{
	//Save old bitmap
	ALLEGRO_BITMAP* oldBitmap = al_get_target_bitmap();
	//switch to new
	al_set_target_bitmap(pTarget->getBitmap());

	al_draw_text(pFont->getFont(), color.getColor(), x, y, ALLEGRO_ALIGN_CENTER, text.c_str());

	//go back to old
	al_set_target_bitmap(oldBitmap);
}

void GraphicsSystem::SaveBuffer(ALLEGRO_BITMAP* pSave, string fileName)
{
	al_save_bitmap(fileName.c_str(), pSave);
}