#include "LevelManager.h"

LevelManager::LevelManager()
{
	mLevelCount = 0;
	mCurrentLevel = -1;
	mNextLevel = 0;
}

LevelManager::~LevelManager()
{

}

void LevelManager::cleanup()
{
	for (int i = 0; i < mpLevels.size(); i++)
	{
		delete mpLevels[i];
	}
}

void LevelManager::addLevel(Level* pLev)
{
	mpLevels.push_back(pLev);
	mLevelCount++;
}

void LevelManager::addMenu(Menu* pMenu)
{
	mpMenus.push_back(pMenu);
	mLevelCount++;
}

Level* LevelManager::getLevel(int pos)
{
	return mpLevels[pos];
}

Menu* LevelManager::getMenu(int pos)
{
	return mpMenus[pos];
}

void LevelManager::setCurrentLevel(int level)
{
	mCurrentLevel = level;
}

int LevelManager::getCurrentLevel()
{
	return mCurrentLevel;
}

int LevelManager::getLevelCount()
{
	return mLevelCount;
}

int LevelManager::getNextLevel()
{
	return mNextLevel;
}

void LevelManager::setNextLevel(int nextLevel)
{
	mNextLevel = nextLevel;
}