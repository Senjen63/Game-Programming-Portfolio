#pragma once

#include "Trackable.h"
#include <allegro5/allegro.h>

class Vector2D;

class InputSystem : public Trackable
{
	private:
		ALLEGRO_EVENT_QUEUE* mpEventQueue;

	public:
		InputSystem();
		~InputSystem();

		enum KeyBoardKeys
		{
			SPACE_KEY = ALLEGRO_KEY_SPACE,
			ENTER_KEY = ALLEGRO_KEY_ENTER,
			ESCAPE_KEY = ALLEGRO_KEY_ESCAPE
		};

		enum MouseButtons
		{
			LEFT_MOUSE = 1,
			RIGHT_MOUSE = 2,
			MIDDLE_MOUSE = 4
		};

		enum KeyBoardEventKeys
		{
			ESCAPE_KEY_E = 59,
			ENTER_KEY_E = 67,
			N_KEY_E = 14,
			Y_KEY_E = 25,
			UP_KEY_E = 84,
			DOWN_KEY_E = 85,
			LEFT_KEY_E = 82,
			RIGHT_KEY_E = 83
		};

		void init();
		void cleanUp();

		void update();

		// getters 
		Vector2D getMousePosition();
		bool getKeyState(KeyBoardKeys);
		bool getMouseState(MouseButtons);
};