#include "InputSystem.h"

bool InputSystem::init()
{
	if (!al_install_keyboard())
	{
		std::cout << "Issues with keyboard." << std::endl;
		system("pause");
		return false;
	}
	if (!al_install_mouse())
	{
		std::cout << "Issues with mouse." << std::endl;
		system("pause");
		return false;
	}
	return true;
}

void InputSystem::cleanUp()
{
	al_uninstall_mouse();
	al_uninstall_keyboard();
}

bool InputSystem::getKeyState(int which_key)
{
	ALLEGRO_KEYBOARD_STATE keyState;
	al_get_keyboard_state(&keyState);
	return al_key_down(&keyState, which_key);
}

int InputSystem::getMouseState()
{
	ALLEGRO_MOUSE_STATE mouseState;
	al_get_mouse_state(&mouseState);
	if (mouseState.buttons & 1)
	{
		//left mouse button down
		return 1;
	}
	if (mouseState.buttons & 2)
	{
		//right mouse button down
		return 2;
	}
	if (mouseState.buttons & 4)
	{
		//middle mouse button down
		return 4;
	}
	else
	{
		return 0;
	}
}

Vector2D InputSystem::getMousePosition()
{
	ALLEGRO_MOUSE_STATE mouseState;
	al_get_mouse_state(&mouseState);
	Vector2D mousePos(mouseState.x, mouseState.y);
	return mousePos;
}

void InputSystem::update()
{
	EventSystem* pEventSystem = EventSystem::getInstance();


	if (getKeyState(ALLEGRO_KEY_W))
	{
		pEventSystem->fireEvent(InputEvent(1));
	}
	else if (getKeyState(ALLEGRO_KEY_UP))
	{
		pEventSystem->fireEvent(InputEvent(5));
	}
	else if (getKeyState(ALLEGRO_KEY_S))
	{
		pEventSystem->fireEvent(InputEvent(2));
	}
	else if (getKeyState(ALLEGRO_KEY_DOWN))
	{
		pEventSystem->fireEvent(InputEvent(6));
	}
	else if (getKeyState(ALLEGRO_KEY_A))
	{
		pEventSystem->fireEvent(InputEvent(3));
	}
	else if (getKeyState(ALLEGRO_KEY_LEFT))
	{
		pEventSystem->fireEvent(InputEvent(7));
	}
	else if (getKeyState(ALLEGRO_KEY_D))
	{
		pEventSystem->fireEvent(InputEvent(4));
	}
	else if (getKeyState(ALLEGRO_KEY_RIGHT))
	{
		pEventSystem->fireEvent(InputEvent(8));
	}
	else if (getKeyState(ALLEGRO_KEY_ESCAPE))
	{
		pEventSystem->fireEvent(InputEvent(9));
	}
}