#include "Font.h"

Font::Font()
{
	mpFont = NULL;
	mFontSize = 0;
}

Font::Font(string fileName, int fontSize)
{
	mFontSize = fontSize;
	mpFont = al_load_ttf_font(fileName.c_str(), mFontSize, 0);
}

Font::~Font()
{
	al_destroy_font(mpFont);
	mFontSize = 0;
}

ALLEGRO_FONT* Font::getFont()
{
	return mpFont;
}

int Font::getFontSize()
{
	return mFontSize;
}