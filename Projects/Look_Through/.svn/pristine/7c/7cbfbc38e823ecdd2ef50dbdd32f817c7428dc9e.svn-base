#include "SceneButton.h"
#include "SceneManager.h"
#include "MenuManager.h"

SceneButton::SceneButton(std::pair<float, float>location, std::pair<float, float>scale, string text, string animationDataFilePath, string levelDataFilePath) : Button(location, scale, text, animationDataFilePath)
{
	mLevelDataFilePath = levelDataFilePath;
}

SceneButton::~SceneButton()
{

}

void SceneButton::onClicked()
{
	string tempString = mLevelDataFilePath;
	Game::getGame()->getMenuManager()->unloadMenu();
	Game::getGame()->getSceneManager()->loadScene(tempString);
}