#pragma once

struct Rect2D
{
    friend class GraphicsSystem;

    int x;
    int y;
    int w;
    int h;

    Rect2D( const int x, const int y, const int w, const int h ) : x( x ), y( y ), w( w ), h( h ), mpRect({x,y,w,h})
    {
    }

    void setX( const int newX )
    {
        x = newX;
        mpRect.x = newX;
    }

    void setY( const int newY )
    {
        y = newY;
        mpRect.y = newY;
    }

private:
    SDL_Rect mpRect;
};

struct Rect2DF
{
    friend class GraphicsSystem;

    float x;
    float y;
    float w;
    float h;

    Rect2DF( const float x, const float y, const float w, const float h ) : x( x ), y( y ), w( w ), h( h ), mpRect({x,y,w,h})
    {
    }

    void setX( const float newX )
    {
        x = newX;
        mpRect.x = newX;
    }

    void setY( const float newY )
    {
        y = newY;
        mpRect.y = newY;
    }

    void setW( const float newW )
    {
        w = newW;
        mpRect.w = newW;
    }

private:
    SDL_FRect mpRect;
};
