#include "unit.h"
#include "wallmanager.h"


WallManager::WallManager()
{

}

WallManager::WallManager(Animation* wallAni)
{
	mpSmurfAnimation = wallAni;
}

WallManager::~WallManager()
{

}

void WallManager::AddNewUnit()
{
	Unit* pUnit = new Unit(BRICK);
	pUnit->setAnimation(mpSmurfAnimation);
	mpUnits.push_back(pUnit);
}

void WallManager::AddNewUnit(Vector2D loc)
{
	Unit* pUnit = new Unit(BRICK, *mpSmurfAnimation, *mpDeanAnimation, loc);
	assert(pUnit);
	mpUnits.push_back(pUnit);
}
