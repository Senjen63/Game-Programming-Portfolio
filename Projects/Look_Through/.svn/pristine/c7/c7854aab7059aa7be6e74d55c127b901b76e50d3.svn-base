#include "SnakePart.h"

SnakePart::SnakePart()
{
    mpChild = nullptr;
}

SnakePart::SnakePart( const int children, const Color color )
{
    if ( children > 0 )
    {
        mpChild = new SnakePart( children - 1, color );
    } else
    {
        mpChild = nullptr;
    }

    mColor = color;
}

SnakePart::~SnakePart()
{
    delete mpChild;
}

void SnakePart::addChild()
{
    if ( mpChild != nullptr )
    {
        mpChild->addChild();
    } else
    {
        mpChild = new SnakePart( 0, mColor );
    }
}

SnakePart * SnakePart::getChild() const
{
    return mpChild;
}

Color SnakePart::getColor() const
{
    return mColor;
}

Vector2D SnakePart::getPosition() const
{
    return mPosition;
}

void SnakePart::setColor( const Color color )
{
    mColor = color;
}

void SnakePart::setPosition( const Vector2D & newPos )
{
    if ( mpChild )
    {
        mpChild->setPosition( mPosition );
    }

    mPosition = newPos;
}
