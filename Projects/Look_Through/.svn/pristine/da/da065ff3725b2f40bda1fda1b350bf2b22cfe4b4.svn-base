#pragma once
#include "Event.h"
#include "SnakeEvents.h"

enum GameEventTypes
{
	CHANGE_SCORE_EVENT = NUM_SNAKE_EVENTS, UPDATE_HUD_EVENT, WIN_LEVEL_EVENT, WIN_GAME_EVENT, NUM_GAME_EVENTS
};

class ChangeScoreEvent : public Event
{
public:
	ChangeScoreEvent( GameEventTypes type, int points );
	~ChangeScoreEvent() {};

	int getPoints() const { return mPoints; };

private:
	int mPoints;
};

class UpdateHUDEvent : public Event
{
public:
	UpdateHUDEvent( GameEventTypes type, int score, float fps, int deltaTime );
	~UpdateHUDEvent() {};

	int getScore() const { return mScore; };
	int getTime() const { return mTotalTime; };
	float getFPS() const { return mFps; };

private:
	int mScore, mTotalTime;
	float mFps;
};

class WinLevelEvent : public Event
{
public:
	WinLevelEvent( GameEventTypes type, int levnum );
	~WinLevelEvent() {};

	int getLevel() const { return mCurLevel; };
private:
	int mCurLevel;
};

class WinGameEvent : public Event
{
public:
	WinGameEvent( GameEventTypes type );
	~WinGameEvent() {};
};