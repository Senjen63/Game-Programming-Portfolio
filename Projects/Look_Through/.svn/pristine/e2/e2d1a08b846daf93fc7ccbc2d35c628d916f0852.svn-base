#pragma once

#include "Font.h"
#include "Color.h"
#include "GraphicsBuffer.h"
#include "Sprite.h"

class GraphicsSystem : public Trackable
{
public:
	GraphicsSystem();
	~GraphicsSystem();

	void init(int width, int height);
	void cleanup();
	void flip();

	int getWidth() { return mWidth; }
	int getHeight() { return mHeight; }

	void draw(int posX, int posY, Sprite sprite, int scaleX, int scaleY);
	void draw(GraphicsBuffer* buffer, int width, int height, int posX, int posY, int scaleX, int scaleY);
	void writeText(int posX, int posY, Font* font, Color color, std::string text);
	
private:
	int mWidth;
	int mHeight;

	// The window we'll be rendering to
	// Can be loaded from a file or can be the image inside of a window
	SDL_Window* mpWindow;
	SDL_Renderer* mpRenderer;
};
