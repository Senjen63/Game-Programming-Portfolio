#include "Unit.h"

Unit::Unit(Animation* one, Animation* two, Vector2D loc)
{
    mCurrentAnim = one;
    mAltAnim = two;
    location = loc;
}

Unit::Unit()
{
    mCurrentAnim = nullptr;
    mAltAnim = nullptr;
    location = Vector2D();
}

Unit::~Unit()
{
    //delete mCurrentAnim;
    //delete mAltAnim;
