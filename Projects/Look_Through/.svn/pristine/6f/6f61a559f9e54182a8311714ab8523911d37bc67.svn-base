#include "Sprite.h"

using namespace std;

Sprite::Sprite()
{
	mLocX = 0, mLocY = 0, mWidth = 0, mHeight = 0;
}

Sprite::Sprite( GraphicsBuffer* buff, int locX, int lotY, int width, int height )
{
	mpBitmap = buff;
	mLocX = locX;
	mLocY = lotY;
	mWidth = width;
	mHeight = height;
}

Sprite::~Sprite()
{
	//delete mpBitmap;
	mpBitmap = nullptr;
}
