#include "Unit.h"

Unit::Unit(int x, int y)
{
	mLocationX = x;
	mLocationY = y;
}

Unit::~Unit()
{
	//delete mpAnimations;
}

void Unit::update(double dt)
{
	mAnimations.front().update(dt);
}

void Unit::draw(Vector2D sourceLoc, Vector2D sourceDim, Vector2D destinationLoc, Vector2D destinationDim, int flags)
{
	al_draw_scaled_bitmap(mAnimations.front().getCurrentSprite().getBitmap()->getBuffer(), sourceLoc.getX(), sourceLoc.getY(), sourceDim.getX(), sourceDim.getY(), destinationLoc.getX(), destinationLoc.getY(), destinationDim.getX(), destinationDim.getY(), flags);
}

Animation& Unit::currentAnimation()
{
	return mAnimations.front();
}

void Unit::addAnimation(Animation animation)
{
	mAnimations.push(animation);
}

void Unit::setAnimation()
{
	Animation lastInQueue = mAnimations.front();
	mAnimations.pop();
	mAnimations.push(lastInQueue);
}

int Unit::getLocationX()
{
	return mLocationX;
}

int Unit::getLocationY()
{
	return mLocationY;
}