#pragma once
#include <Vector2D.h>

#include "SpawnEvent.h"
#include "GraphicsBuffer.h"

class SpawnArrowEvent : public SpawnEvent
{
private:
    Vector2D mPos;
    Vector2D mVelocity;
    float mLife;
    float mAngle = 0;

public:
    SpawnArrowEvent(Vector2D pos, Vector2D velocity, float life, float angle);
    ~SpawnArrowEvent();

    Vector2D getPos() const { return mPos; }
    Vector2D getVelocity() const { return mVelocity; }
    float getLife() const { return mLife; }
    float getAngle() const { return mAngle; }
};