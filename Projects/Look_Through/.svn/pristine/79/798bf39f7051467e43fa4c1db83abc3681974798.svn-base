#include "unit.h"
#include "powerupmanager.h"

PowerUpManager::PowerUpManager()
{

}

PowerUpManager::PowerUpManager(Animation* wallAni)
{
	mpSmurfAnimation = wallAni;
}

PowerUpManager::~PowerUpManager()
{

}

void PowerUpManager::AddNewUnit()
{
	Unit* pUnit = new Unit(POWERUPITEM);
	pUnit->setAnimation(mpSmurfAnimation);
	mpUnits.push_back(pUnit);
}

void PowerUpManager::AddNewUnit(Vector2D loc)
{
	Unit* pUnit = new Unit(POWERUPITEM, *mpSmurfAnimation, *mpDeanAnimation, loc);
	assert(pUnit);
	mpUnits.push_back(pUnit);
}