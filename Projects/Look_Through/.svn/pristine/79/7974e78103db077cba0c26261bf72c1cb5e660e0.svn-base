#pragma once

#include <SFML/Audio.hpp>
#include <string>

#include <Trackable.h>

class Music : public Trackable
{
public:
	Music(std::string filename, bool looping = true);
	~Music();

	//music functions
	void play() { mMusic->play(); }
	void pause() { mMusic->pause(); }
	void stop() { mMusic->stop(); }
	void setVolume(float i) { mMusic->setVolume(i); }
	void isLooping(bool loops) { mMusic->setLoop(loops); }
private:
	sf::Music* mMusic;
};