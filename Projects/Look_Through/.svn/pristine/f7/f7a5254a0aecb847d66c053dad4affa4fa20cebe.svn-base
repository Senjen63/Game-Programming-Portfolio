#pragma once

#include <allegro5/allegro.h>
#include <Trackable.h>

class Color : public Trackable
{
	public:
		friend class GraphicsSystem;
		friend class GraphicsBuffer;

		Color();
		Color(unsigned int r, unsigned int g, unsigned int b, unsigned int a);
		~Color();

		int getRed() { return mR; }
		int getGreen() { return mG; }
		int getBlue() { return mB; }
		int getAlpha() { return mA; }

	private:
		int mR;
		int mG;
		int mB;
		int mA;

		ALLEGRO_COLOR mColor;
		ALLEGRO_COLOR getColor() { return mColor; }
};