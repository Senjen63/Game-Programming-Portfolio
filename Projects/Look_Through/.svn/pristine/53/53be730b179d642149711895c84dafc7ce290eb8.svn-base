#include "inputSystem.h"

InputSystem::InputSystem()
{
	
}
InputSystem::~InputSystem()
{
	inputCleanup();
}

void InputSystem::inputInit()
{
	if (!mInit)
	{
		al_install_keyboard();
		al_install_mouse();
		mInit = true;
	}
	
}
void InputSystem::inputCleanup()
{
	if (!mClean)
	{
		mClean = false;
	}
}

bool InputSystem::getKeyState(int keyNumber)
{
	ALLEGRO_KEYBOARD_STATE keyState;
	al_get_keyboard_state(&keyState);

	if (al_key_down(&keyState, keyNumber))
	{
		return true;
	}

	return false;

}
Vector2D InputSystem::getMouseState(int mouseNum)
{
	ALLEGRO_MOUSE_STATE mouseState;
	al_get_mouse_state(&mouseState);

	if (mouseState.buttons && mouseNum)
	{
		return Vector2D(mouseState.x, mouseState.y);
	}


	return Vector2D(-1, -1);
}