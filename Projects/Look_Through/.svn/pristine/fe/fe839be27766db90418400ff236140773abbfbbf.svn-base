#include "GameEvent.h"

CloseGameEvent::CloseGameEvent() : 
    Event((EventType)EVENT_GAME_CLOSE)
{}

GameStartEvent::GameStartEvent() : 
    Event((EventType)EVENT_GAME_START)
{}

GameOverEvent::GameOverEvent() :
    Event((EventType)EVENT_GAME_OVER)
{}

GameWonEvent::GameWonEvent() : 
    Event((EventType)EVENT_GAME_WON)
{}

GameLevelLoaded::GameLevelLoaded() :
    Event((EventType)EVENT_GAME_LEVEL_LOADED)
{}

ChangeDirectionEvent::ChangeDirectionEvent(Direction direction) : 
    Event((EventType)EVENT_SNAKE_CHANGE_DIRECTION), mDirection(direction)
{}

GrowEvent::GrowEvent(int growAmount) : 
    Event((EventType)EVENT_SNAKE_GROW), mGrowAmount(growAmount)
{}

MoveEvent::MoveEvent(const Vector2D& newPos) :
    Event((EventType)EVENT_SNAKE_MOVE), mNewPos(newPos)
{}

PointsEvent::PointsEvent(int pointsAmount) :
    Event((EventType)EVENT_GAME_POINTS), mPointsAmount(pointsAmount)
{}

SpeedEvent::SpeedEvent(float deltaTime) :
    Event((EventType)EVENT_SNAKE_SPEED), mDeltaTime(deltaTime)
{}
