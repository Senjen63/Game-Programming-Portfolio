#include "Sprite.h"

Sprite::Sprite()
{
	mpBuffer = NULL;
	mX = 0;
	mY = 0;
	mWidth = 0;
	mHeight = 0;
}
Sprite::Sprite(GraphicsBuffer* graphicsBuffer, int x, int y, int width, int height)
{
	mpBuffer = graphicsBuffer;
	mX = x;
	mY = y;
	mWidth = width;
	mHeight = height;
}
Sprite::~Sprite()
{	

	mX = 0;
	mY = 0;
	mWidth = 0;
	mHeight = 0;
}

GraphicsBuffer* Sprite::getBuffer()
{
	return mpBuffer;
}

int Sprite::getWidth()
{
	return mWidth;
}
int Sprite::getHeight()
{
	return mHeight;
}
int Sprite::getX()
{
	return mX;
}
int Sprite::getY()
{
	return mY;
}
