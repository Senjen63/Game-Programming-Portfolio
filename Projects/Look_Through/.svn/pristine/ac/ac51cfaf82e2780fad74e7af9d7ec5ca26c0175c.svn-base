#include "PowerUpManager.h"
#include "Game.h"

PowerUpManager::PowerUpManager()
{
	
}

void PowerUpManager::addPowerUp(Unit* unit)
{
	mpPowerUps.push_back(unit);
}

void PowerUpManager::removePowerUp(Unit* unit)
{
	for (int i = 0; i < mpPowerUps.size(); i++)
	{
		Unit* pUnit = mpPowerUps[i];
		if (pUnit == unit)
		{
			Game::getGame()->getUnitMan()->deleteUnit(pUnit);
			break;
		}
	}
}

void PowerUpManager::removePowerUp(int index)
{
	Game::getGame()->getUnitMan()->deleteUnit(mpPowerUps[index]);
}

