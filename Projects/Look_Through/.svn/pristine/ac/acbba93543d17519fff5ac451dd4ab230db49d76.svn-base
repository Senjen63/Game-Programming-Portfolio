#pragma once
#include "font.h"
#include <iostream>
using namespace std;

ALLEGRO_FONT* Font::getFont()
{
	return theFont;
}

Font::Font()
{
	fontSize = DEFAULT_SIZE;
	theFont = al_load_ttf_font((FOLDERS + DEFAULT_FONT).c_str(), fontSize, 0);
	assert(theFont);
}

Font::~Font()
{
	theFont = nullptr;
}

Font::Font(ALLEGRO_FONT* given, int givenSize)
{
	fontSize = givenSize;
	theFont = given;
}

Font::Font(string given, int givenSize)
{
	fontSize = givenSize;
	this->theFont = al_load_ttf_font((FOLDERS + given).c_str(), fontSize, 0);
	assert(theFont);
}

int Font::getFontSize()
{
	return fontSize;
}

void Font::setFontSize(int givenSize)
{
	fontSize = givenSize;
}