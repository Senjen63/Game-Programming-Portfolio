#pragma once

#include <string>

#include "Font.hpp"

struct AtlasData
{
    std::vector< std::string > spriteNames;
    int totalSprites;
    int pixelStride;
    int spritesPerRow;
    int spritesPerColumn;
};

struct ImageData
{
    int pixelsPerUnit;
};

struct FontData
{
    int size{};
    Font::Style style{};
    Color color = Color( 0, 0, 0 );
};

struct Asset
{
    std::string name;
    std::string path;

    enum class AssetType
    {
        Sprite,
        Atlas,
        Font,
        Sound,
    } type;
};

struct SpriteAsset : Asset
{
    ImageData imageData;
};

struct AtlasAsset : SpriteAsset
{
    AtlasData atlasData;
};

struct FontAsset : Asset
{
    FontData fontData;
};
