#pragma once

#include <string>
#include "GameEvent.h"

enum MouseType
{
	LEFT_PRESSED,
	RIGHT_PRESSED,
	NONE_PRESSED
};

class MouseEvent : public GameEvent
{
public:
	MouseEvent(int mousePosX, int mousePosY, MouseType mouseType);
	virtual ~MouseEvent();

	std::pair<int, int> getMousePos() const { return mMousePosition; }
	MouseType getMouseType() const { return mMouseType; }
private:
	const std::pair<int, int> mMousePosition;
	const MouseType mMouseType;
};