#include "LevelManager.h"

LevelManager::LevelManager()
{

}

LevelManager::~LevelManager()
{
	//cleanUp();
}

void LevelManager::addLevel(Level theLevel)
{
	mLevelList.push_back(theLevel);
}

Level LevelManager::getLevel(int levelNumber)
{
	return mLevelList.at(levelNumber);
}

void LevelManager::resetLevel(int levelNumber)
{
	mLevelList.at(levelNumber).reset();
}

int LevelManager::getTotalLevels()
{
	return mLevelList.size();
}

void LevelManager::cleanUp()
{
	for (int i = 0; i < mLevelList.size(); i++)
	{
		mLevelList.at(i).cleanUp();
	}
}