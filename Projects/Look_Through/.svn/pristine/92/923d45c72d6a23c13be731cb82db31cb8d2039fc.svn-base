#pragma once
#include "Trackable.h"
#include "Vector2D.h"

class GraphicsBuffer;
class Vector2D;

class Sprite : public Trackable
{	
	private:
		GraphicsBuffer* mpBuffer;
		Vector2D mSourceLocation;
		int mSpriteWidth;
		int mSpriteHeight;
	public:
		Sprite(int width, int height, Vector2D location, GraphicsBuffer* pBuffer);
		~Sprite();

		// getters
		int getSpriteHeight() { return mSpriteHeight; }
		int getSpriteWidth() { return mSpriteWidth; }
		GraphicsBuffer* getBuffer() { return mpBuffer; }
		Vector2D getSourceLocation();
};