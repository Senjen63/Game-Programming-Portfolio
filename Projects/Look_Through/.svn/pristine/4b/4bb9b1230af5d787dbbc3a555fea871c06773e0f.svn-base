#pragma once

#include <allegro5/allegro.h>
#include <allegro5/allegro_font.h>
#include <allegro5/allegro_ttf.h>
#include <allegro5/allegro_audio.h>
#include <allegro5/allegro_acodec.h>
#include <allegro5/allegro_image.h>
#include <allegro5/allegro_primitives.h>

#include <Trackable.h>
#include <Vector2D.h>

enum class MyKeyCode
{
	F_KEY = ALLEGRO_KEY_F,
	S_KEY = ALLEGRO_KEY_S,
	ENTER = ALLEGRO_KEY_ENTER,
	ESCAPE = ALLEGRO_KEY_ESCAPE,
	SPACE = ALLEGRO_KEY_SPACE
};

enum class MyMouseCode
{
	LEFT = 1,
	RIGHT = 2
};

class InputSystem : public Trackable
{
	public:
		InputSystem();
		~InputSystem();

		void update();
		void init();
		void cleanup();

		bool getKeyState(MyKeyCode key);
		Vector2D getMouseState();

		bool isMouseDown(MyMouseCode mouse);

	private:
		ALLEGRO_KEYBOARD_STATE mState;
		ALLEGRO_MOUSE_STATE mMouseState;
};