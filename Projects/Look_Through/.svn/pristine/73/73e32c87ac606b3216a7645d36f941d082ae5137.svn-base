#include <iostream>
#include <cassert>
#include <string>

#include <PerformanceTracker.h>
#include <MemoryTracker.h>
#include <Vector2D.h>
#include <Timer.h>

#include "Game.h"

using namespace std;

const int DISP_WIDTH = 800;
const int DISP_HEIGHT = 600;

int main()
{
	Game::createInstance();
	Game* game = Game::getInstance();

	game->init(DISP_HEIGHT, DISP_WIDTH);
	game->doLoop();
	game->deinit();

	game = nullptr;

	Game::destroyInstance();

	MemoryTracker::getInstance()->reportAllocations(std::cout);
	system("PAUSE");
}
