#include "GraphicsBufferManager.h"

GraphicsBufferManager::GraphicsBufferManager()
{

}

GraphicsBufferManager::~GraphicsBufferManager()
{
	
}

void GraphicsBufferManager::addGraphicsBuffer(string key, GraphicsBuffer* buffer)
{
	pair<string, GraphicsBuffer*> pair(key, buffer);
	mpGraphicsBuffers.insert(pair);
}

GraphicsBuffer* &GraphicsBufferManager::getGraphicsBuffer(string key)
{
	return mpGraphicsBuffers.at(key);
}

void GraphicsBufferManager::removeGraphicsBuffer(string key)
{
	mpGraphicsBuffers.erase(key);
}

void GraphicsBufferManager::deleteAll()
{
	mpGraphicsBuffers.clear();
}