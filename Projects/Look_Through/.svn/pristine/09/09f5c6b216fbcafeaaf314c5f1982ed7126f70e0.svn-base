#include "Animation.h"

Animation::Animation(double speed, bool isLooping)
{
	mSpeed = speed;
	mIsLooping = isLooping;
	mSpritesToUse = {};
	mCurrentFrame = 0;
	mTimeInFrame = 0;
}

Animation::~Animation()
{

}

void Animation::update()
{
	mTimeInFrame += mSpeed;

	while (mTimeInFrame > 1)
	{
		mTimeInFrame -= 1;
		mCurrentFrame++;
		if (size_t(mCurrentFrame) >= mSpritesToUse.size()) { 
			if (mIsLooping) { mCurrentFrame = 0; }
			else { mSpeed = 0; }
		}
	}
}