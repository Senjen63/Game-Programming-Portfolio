#include "Font.h"

Font::Font( string filePath, int fontSize, int flags )
{
    mFontSize = fontSize;
    if ( flags == ALIGN_RIGHT )
    {
        mFlag = ALIGN_RIGHT;
        mpFont = al_load_ttf_font( filePath.c_str(), fontSize, ALLEGRO_ALIGN_RIGHT );
    }
    else if ( flags == ALIGN_CENTER )
    {
        mFlag = ALIGN_CENTER;
        mpFont = al_load_ttf_font( filePath.c_str(), fontSize, ALLEGRO_ALIGN_CENTER );
    }
    else
    {
        mFlag = ALIGN_LEFT;
        mpFont = al_load_ttf_font( filePath.c_str(), fontSize, 0 );
    }
    
}
Font::~Font()
{
    al_destroy_font( mpFont );
}
float Font::getSize()
{
    return mFontSize;
}