#pragma once

#include "Trackable.h"
#include <Vector2D.h>
#include <vector>

class Level : public Trackable
{

public:
	Level(int levelNum);
	~Level();

	//getters + setters
	void setLevelSize(Vector2D size) { mLevelSize = size; }
	void setWidth(float width) { mLevelSize.setX(width); }
	void setHeight(float height) { mLevelSize.setY(height); }
	void setStartPos(Vector2D pos) { mPlayerStartPos = pos; }
	void setStartX(float x) { mPlayerStartPos.setX(x); }
	void setStartY(float y) { mPlayerStartPos.setY(y); }

	Vector2D getLevelSize() { return mLevelSize; }
	Vector2D getStartPos() { return mPlayerStartPos; }

	void update(double elapsedTime);
private:
	int mLevelNum;
	Vector2D mLevelSize;
	Vector2D mPlayerStartPos;

	//LEVEL INFO GOES HERE
};
