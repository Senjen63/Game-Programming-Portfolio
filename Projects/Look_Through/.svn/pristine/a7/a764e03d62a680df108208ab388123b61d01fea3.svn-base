#include "Font.h"

Font::Font(string assetPath, string filename, float fontSize, int flags)
{
	mpFont = al_load_ttf_font((assetPath + filename).c_str(), fontSize, flags);
	mFontSize = fontSize;
}

Font::~Font()
{
	al_destroy_font;
}

ALLEGRO_FONT* Font::getFont()
{
	return mpFont;
}

float Font::getFontSize()
{
	return mFontSize;
}