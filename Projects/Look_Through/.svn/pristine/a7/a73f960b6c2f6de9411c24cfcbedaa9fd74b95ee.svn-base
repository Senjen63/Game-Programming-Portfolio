//----------------------------------------Graphics System----------------------------------------

GraphicsSystem::GraphicsSystem(int width, int height) {
	setup();
	
	this->DISP_WIDTH = width;
	this->DISP_HEIGHT = height;
	this->Display = al_create_display(width, height);
	assert(Display);

	Back = new GraphicsBuffer(al_get_backbuffer(Display));
}

GraphicsSystem::~GraphicsSystem() {
	al_destroy_display(Display);
	delete Back;
}

bool GraphicsSystem::setup() {
	//check for errors
	if (!al_init())
	{
		cout << "error initting Allegro\n";
		system("pause");
		return 1;
	}
	if (!al_init_image_addon())
	{
		cout << "error - Image Add-on not initted\n";
		system("pause");
		return 1;
	}
	if (!al_init_font_addon())
	{
		cout << "error - Font Add-on not initted\n";
		system("pause");
		return 1;
	}
	if (!al_init_ttf_addon())
	{
		cout << "error - TTF Add-on not initted\n";
		system("pause");
		return 1;
	}
	if (!al_init_primitives_addon())
	{
		cout << "error - primitives Add-on not initted\n";
		system("pause");
		return 1;
	}
	if (!al_init_acodec_addon())
	{
		cout << "error - Audio Codec Add-on not initted\n";
		system("pause");
		return 1;
	}
	
	Display = al_create_display(DISP_WIDTH, DISP_HEIGHT);
	assert (Display);

	Back = new GraphicsBuffer(al_get_backbuffer(Display));

	return 0;
}

void GraphicsSystem::cleanup()
{
	al_destroy_display(Display);
	delete Back;
}

void GraphicsSystem::flip()
{ 
	al_flip_display();
}

void GraphicsSystem::draw(int x, int y, Sprite sprite, float scale)
{
	al_set_target_bitmap(al_get_backbuffer(Display));
	al_draw_scaled_bitmap(sprite.getGraphicsBuffer()->mpBitmap, sprite.getSourceX(), sprite.getSourceY(), sprite.getWidth(), sprite.getHeight(), x, y, sprite.getWidth() * scale, sprite.getHeight() * scale, 0);
}

void GraphicsSystem::draw(GraphicsBuffer* graphicsBuffer, int x, int y, Sprite sprite, float scale)
{
	al_set_target_bitmap(graphicsBuffer->mpBitmap);
	al_draw_scaled_bitmap(sprite.getGraphicsBuffer()->mpBitmap, sprite.getSourceX(), sprite.getSourceY(), sprite.getWidth(), sprite.getHeight(), x, y, sprite.getWidth() * scale, sprite.getHeight() * scale, 0);
}

void GraphicsSystem::draw(GraphicsBuffer* graphicsBuffer, int x, int y, float scale)
{
	al_draw_scaled_bitmap(graphicsBuffer->getBitmap(), 0, 0, graphicsBuffer->getWidth(), graphicsBuffer->getHeight(), x, y, graphicsBuffer->getWidth() * scale, graphicsBuffer->getHeight() * scale, 0);
}

void GraphicsSystem::writeText(int x, int y, Font* font, Color color, std::string text)
{
	al_draw_text(font->FontStyle, color.getColor(), x, y, ALLEGRO_ALIGN_CENTER, text.c_str());
}

void GraphicsSystem::writeText(GraphicsBuffer* graphicsBuffer, int x, int y, Font* font, Color color, std::string text)
{
	al_draw_text(font->FontStyle, color.getColor(), x, y, ALLEGRO_ALIGN_CENTER, text.c_str());
}

void GraphicsSystem::saveBuffer(GraphicsBuffer* graphicsBuffer, std::string fileName)
{
	al_save_bitmap(fileName.c_str(), graphicsBuffer->mpBitmap);
}


//----------------------------------------Graphics Buffer----------------------------------------

GraphicsBuffer::GraphicsBuffer()
{
	this->mpBitmap = NULL;
}

GraphicsBuffer::GraphicsBuffer(ALLEGRO_BITMAP* bitmap)
{
	this->mpBitmap = bitmap;
	assert(mpBitmap);
}

GraphicsBuffer::GraphicsBuffer(int width, int height, Color color)
{
	this->mpBitmap = al_create_bitmap(width, height);
	al_set_target_bitmap(mpBitmap);
	al_clear_to_color(color.getColor());
	assert(mpBitmap);
}

GraphicsBuffer::GraphicsBuffer(std::string fileName)
{
	this->mpBitmap = al_load_bitmap((mDEAN_FILE_PATH + fileName).c_str());
	assert(mpBitmap);
}

GraphicsBuffer::GraphicsBuffer(std::string fileName, std::string filePath)
{
	this->mpBitmap = al_load_bitmap((filePath + fileName).c_str());
	assert(mpBitmap);
}

GraphicsBuffer::~GraphicsBuffer()
{
	//al_destroy_bitmap(Bitmap);
}

void GraphicsBuffer::clearToColor(Color color)
{
	ALLEGRO_BITMAP* oldBitmap = al_get_target_bitmap();
	al_set_target_bitmap(getBitmap());
	al_clear_to_color(al_map_rgb(color.getColor().r, color.getColor().g, color.getColor().b));
	al_set_target_bitmap(oldBitmap);
}