#pragma once
#include "Button.h"

#include <Trackable.h>

class Menu : public Trackable
{
    private:
        vector<Button*> mButtons;
        string mTitleText;
        bool mShowPoints = false;

    public:
        Menu();
        Menu(Button* firstButton, string text);                                                                     //One Button: Game Over / Win Screen
        Menu(Button* firstButton, Button* secondButton, string text);                                               //Two Buttons: Between Levels
        Menu(Button* firstButton, Button* secondButton, Button* thirdButton, string text);                          //Three Buttons: Start menu if previous save does not exist
        Menu(Button* firstButton, Button* secondButton, Button* thirdButton, Button* fourthButton, string text);    //Four Buttons: Start Menu with load button
        Menu(Button* firstButton, Button* secondButton, Button* thirdButton, Button* fourthButton, Button* fifthButton,
            Button* sixthButton, Button* seventhButton, Button* eigthButton, Button* ninthButton, string text);                                               //Seven Buttons: Options

        ~Menu();

        void init();
        void cleanup();

        string getTitleText() { return mTitleText; }
        vector<Button*>* getButtons() { return &mButtons; }
        bool getShowPoints() { return mShowPoints; }

        void setTitleText(string text) { mTitleText = text; }
        void setButtonsActive(bool active);
        void setShowPoints(bool showPoints) { mShowPoints = showPoints; }

        //void instantiateButtons(UnitManager* unitManager);
        void update(float timeElapsed);

        void drawButtons();

        void clearButtons();
};