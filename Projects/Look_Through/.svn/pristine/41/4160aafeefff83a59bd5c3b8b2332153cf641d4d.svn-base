#pragma once

#include <allegro5/allegro.h>
#include "Trackable.h"

class Color : public Trackable
{
	private:
		int mRed, mGreen, mBlue, mA;
	public:
		Color(int red, int green, int blue, int a);
		~Color();

		// getters
		int getRed() { return mRed; }
		int getGreen() { return mGreen; }
		int getBlue() { return mBlue; }
		int getA() { return mA; }
};