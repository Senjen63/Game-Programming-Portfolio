#pragma once

#include <allegro5/allegro.h>

#include <Trackable.h>
#include <Vector2D.h>

struct ALLEGRO_KEYBOARD_STATE;
struct ALLEGRO_MOUSE_STATE;

enum class KeyCode
{
	F_KEY = ALLEGRO_KEY_F,
	S_KEY = ALLEGRO_KEY_S,
	R_KEY = ALLEGRO_KEY_R,
	SPACE_KEY = ALLEGRO_KEY_SPACE,
	ENTER_KEY = ALLEGRO_KEY_ENTER,
	ESCAPE_KEY = ALLEGRO_KEY_ESCAPE,
	UP_ARROW = ALLEGRO_KEY_UP,
	DOWN_ARROW = ALLEGRO_KEY_DOWN,
	LEFT_ARROW = ALLEGRO_KEY_LEFT,
	RIGHT_ARROW = ALLEGRO_KEY_RIGHT
};

enum class MouseCode
{
	LEFT_CLICK = 1,
	RIGHT_CLICK,
	MIDDLE_CLICK = 4
};

class InputSystem : public Trackable
{
public:
	
	InputSystem() {};
	~InputSystem();

	void init();
	void cleanup();

	void update();

	bool getKeyState(KeyCode key);
	bool getMouseState(MouseCode button);
	Vector2D getMousePosition();

private:

	ALLEGRO_EVENT_QUEUE* mpQueue = nullptr;
};

