#pragma once
#include "GameEvent.h"
#include "Unit.h"

class CollisionEvent : public GameEvent
{
private:
    Unit* mChecked = nullptr; //object checking for collision
    Unit* mCollider = nullptr; //object collided with

public:
    CollisionEvent(Unit* checked, Unit* collider);
    ~CollisionEvent();

    Unit* getChecked() const { return mChecked; }
    Unit* getCollider() const { return mCollider; }
};