#include "InputSystem.h"

InputSystem::InputSystem()
{
    mpSystem = nullptr;
}

InputSystem::~InputSystem()
{
	cleanup();
}

void InputSystem::init()
{
    if (!al_init())
    {
        throw new std::exception("error initting Allegro\n");
    }
    if (!al_install_keyboard())
    {
        throw new std::exception("error - keyboard not installed\n");
    }
    if (!al_install_mouse())
    {
        throw new std::exception("error - mouse not installed\n");
    }
    mpEvent = al_create_event_queue();
    al_register_event_source(mpEvent, al_get_keyboard_event_source());

    EventSystem::initInstance();
    mpSystem = EventSystem::getInstance();
    mpSystem->init();
}

void InputSystem::cleanup()
{
    mpSystem->cleanup();
    mpSystem = nullptr;
}

void InputSystem::getKeyEvent()
{
    while (!al_is_event_queue_empty(mpEvent))
    {
        ALLEGRO_EVENT theEvent;
        al_get_next_event(mpEvent, &theEvent);
        if (theEvent.type == ALLEGRO_EVENT_KEY_DOWN)
        {
            mpSystem->fireEvent(MoveEvent((int)theEvent.keyboard.keycode));
        }
    }
}

bool InputSystem::getKeyState(Key keyCode)
{
    al_get_keyboard_state(&mKeyboardState);
    return al_key_down(&mKeyboardState, int(keyCode));

}

bool InputSystem::getMouseDown(Mouse keyCode)
{
    al_get_mouse_state(&mMouseState);
    return al_mouse_button_down(&mMouseState, int(keyCode));
}

Vector2D InputSystem::getMousePosition()
{
    al_get_mouse_state(&mMouseState);
    return Vector2D(mMouseState.x, mMouseState.y);
}