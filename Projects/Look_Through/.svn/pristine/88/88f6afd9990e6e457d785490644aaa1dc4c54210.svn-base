
#include "Color.h"

Color::Color()
{
	mColor.r = 255;
	mColor.g = 255;
	mColor.b = 255;
}

Color::Color(int red, int green, int blue)
{
	mColor.r = red;
	mColor.g = green;
	mColor.b = blue;
}

Color::Color(int red, int green, int blue, int alpha)
{
	mColor.r = red;
	mColor.g = green;
	mColor.b = blue;
}

Color::~Color()
{
	mColor.r = 255;
	mColor.g = 255;
	mColor.b = 255;
}

SDL_Color Color::getColor()
{
	return mColor;
}