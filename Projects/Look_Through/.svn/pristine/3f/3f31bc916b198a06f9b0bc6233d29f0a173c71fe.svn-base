#pragma once
#include "InputEvent.h"

#include <Vector2D.h>

enum class MouseCode;

class MouseInputEvent : public InputEvent
{
public:

	MouseInputEvent(const Vector2D& pos, const MouseCode& button)
		: InputEvent(InputEventType::MOUSE_INPUT_EVENT), mPos(pos), mButton(button) {};
	~MouseInputEvent() {};
	
	inline Vector2D getPos() const { return mPos; };
	inline MouseCode getButton() const{ return mButton; };

private:

	Vector2D mPos;
	MouseCode mButton;
};

