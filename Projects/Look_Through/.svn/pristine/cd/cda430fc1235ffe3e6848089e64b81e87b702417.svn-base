#pragma once

#include "Level.h"
#include "Vector2D.h"
#include <vector>
#include <Trackable.h>

class Level;

class LevelManager : public Trackable
{
private:

	std::vector<Level*> mpLevelList;
	int mCurrentLevel = 0;

public:

	LevelManager();
	~LevelManager();

	void createLevel(std::string filename);
	void deleteLevel(Level* pLevelToDelete);
	void clearLevels();
	void increaseLevelIndex();
	void resetCurrentLevel();

	std::vector<Level*> getLevelList() const { return mpLevelList; };
	int getCurrentLevelIndex() const { return mCurrentLevel; };
};
