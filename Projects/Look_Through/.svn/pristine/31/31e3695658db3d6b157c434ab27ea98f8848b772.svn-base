#pragma once
#include "GameEvent.h"
#include "Vector2D.h"

enum class UnitType;

class ObjectCollisionEvent :  public GameEvent
{
public:

	ObjectCollisionEvent(const UnitType& type, const Vector2D& pos)
		: GameEvent(GameEventType::OBJECT_COLLISION_EVENT), mType(type), mPos(pos) {};
	~ObjectCollisionEvent() {};

	inline Vector2D getPos() const { return mPos; };
	inline UnitType getType() const { return mType; };

private:

	Vector2D mPos;
	UnitType mType;
};

