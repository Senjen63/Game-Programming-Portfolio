#include "AnimationPrototype.h"

AnimationPrototype::AnimationPrototype(GraphicsBuffer* buffer, int type)
{
	int tileSize;
	if (type == 0)
		tileSize = TREE;
	else
		tileSize = CHARACTER;

	int srcX, srcY;

	for (int i = 0; i < 4; i++)
	{
		srcX = tileSize * i;
		srcY = 0;

		Sprite mSprite(buffer, srcX, srcY, tileSize, tileSize);
		mSprites.push_back(mSprite);
	}
}

AnimationPrototype::~AnimationPrototype()
{
	mSprites.clear();
}

void AnimationPrototype::addSprite(const Sprite& theSprite)
{
	mSprites.push_back(theSprite);
}

const Sprite& AnimationPrototype::getSprite(int index) const
{
	return mSprites[index];
}