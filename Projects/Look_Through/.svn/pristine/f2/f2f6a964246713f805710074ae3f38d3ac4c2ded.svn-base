#pragma once
#include "sprite.h"

Sprite::Sprite()
{
	sprite = nullptr;
	loc = Vector2D(0, 0);
	width = DEFAULT_WIDTH;
	height = DEFAULT_HEIGHT;
}

Sprite::~Sprite()
{
	sprite = nullptr;
}

Sprite::Sprite(Vector2D loca, int hi, int wi, GraphicsBuffer* spri)
{
	loc = loca;
	height = hi;
	width = wi;
	sprite = spri;
}

void Sprite::setLoc(Vector2D loca)
{
	loc = loca;
}

void Sprite::setHeight(int hi)
{
	height = hi;
}

void Sprite::setWidth(int wi)
{
	width = wi;
}

void Sprite::setSprite(GraphicsBuffer* spri)
{
	sprite = spri;
}

Vector2D Sprite::getLoc()
{
	return loc;
}

int Sprite::getHeight()
{
	return height;
}

int Sprite::getWidth()
{
	return width;
}

GraphicsBuffer* Sprite::getSprite()
{
	return sprite;
}