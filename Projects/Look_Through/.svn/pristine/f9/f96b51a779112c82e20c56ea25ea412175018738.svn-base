#include "Sprite.h"

Sprite::Sprite()
{
	mWidth = 0;
	mHeight = 0;
	mpGraphicsBuffer = NULL;
	mLocation = Vector2D(0, 0);
}


Sprite::Sprite(GraphicsBuffer*& pGraphicsBuffer, Vector2D location, int width, int height)
{
	mpGraphicsBuffer = pGraphicsBuffer;
	mLocation = location;
	mWidth = width;
	mHeight = height;
}


Sprite::~Sprite()
{
	mWidth = 0;
	mHeight = 0;
	mpGraphicsBuffer = NULL;
	mLocation = Vector2D(0, 0);
}


GraphicsBuffer* Sprite::GetBuffer()
{
	return mpGraphicsBuffer;
}


Vector2D Sprite::GetLocation()
{
	return mLocation;
}


int Sprite::GetWidth()
{
	return mWidth;
}


int Sprite::GetHeight()
{
	return mHeight;
}