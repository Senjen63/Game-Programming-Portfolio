#include "Sprite.h"

Sprite::Sprite() 
{
	bufferUsed = nullptr;
	sX = 0;
	sY = 0;
	sWidth = 0;
	sHeight = 0;
}

Sprite::Sprite(GraphicsBuffer* baseBuffer, int x, int y)
{
	bufferUsed = baseBuffer;

	sX = x;
	sY = y;
	sWidth = bufferUsed->getWidth();
	sHeight = bufferUsed->getHeight();
}

Sprite::Sprite(GraphicsBuffer* baseBuffer, int x, int y, int width, int height)
{
	bufferUsed = baseBuffer;

	sX = x;
	sY = y;
	sWidth = width;
	sHeight = height;
}

Sprite::~Sprite() 
{

}