#include "Font.h"

using namespace std;

Font::Font(string& pathToFont, int fontSize)
{
    mFontSize = fontSize;
    mpFont = al_load_ttf_font(pathToFont.c_str(), fontSize, 0);
    assert(mpFont);
}

Font::~Font()
{
    al_destroy_font(mpFont);
}

ALLEGRO_FONT* Font::getFont()
{
    return mpFont;
}

int Font::getFontSize()
{
    return mFontSize;
}
