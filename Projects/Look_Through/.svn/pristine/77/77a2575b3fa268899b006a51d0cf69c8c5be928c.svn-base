#pragma once

#include <Trackable.h>
#include <allegro5/allegro_color.h>

/// <summary>
/// Holds info for rgba colors ranging 0-255 
/// </summary>
struct Color : public Trackable
{
    Color(unsigned char r, unsigned char g, unsigned char b, unsigned char a);

    unsigned char r, g, b, a;

    /// <summary>
    /// Implicit cast to convert into an ALLEGRO_COLOR 
    /// </summary>
    operator ALLEGRO_COLOR() const;
};


/* Consts to make life easier */
// Short for Color(255, 0, 0, 255)
const Color COLOR_RED = Color(255, 0, 0, 255);
// Short for Color(0, 255, 0, 255);
const Color COLOR_GREEN = Color(0, 255, 0, 255);
// Short for Color(0, 0, 255, 255);
const Color COLOR_BLUE = Color(0, 0, 255, 255);
// Short for Color(255, 255, 0, 255);
const Color COLOR_YELLOW = Color(255, 255, 0, 255);
// Short for Color(255, 0, 255, 255);
const Color COLOR_MAGENTA = Color(255, 0, 255, 255);
// Short for Color(0, 255, 255, 255);
const Color COLOR_CYAN = Color(0, 255, 255, 255);
// Short for Color(255, 255, 255, 255);
const Color COLOR_WHITE = Color(255, 255, 255, 255);
// Short for Color(0, 0, 0, 255);
const Color COLOR_BLACK = Color(0, 0, 0, 255);
// Short for Color(128, 128, 128, 255);
const Color COLOR_GREY = Color(128, 128, 128, 255);
// Short for Color(0, 0, 0, 0);
const Color COLOR_CLEAR = Color(0, 0, 0, 0);