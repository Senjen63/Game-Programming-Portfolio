#include <Font.h>

Font::Font(const std::string& pathToFont, int fontSize) : 
    mFontSize(fontSize), mFilePath(pathToFont)
{
    mFont = al_load_ttf_font(pathToFont.c_str(), fontSize, 0);
    assert(mFont);
}

Font::Font(const Font& other) :
    mFontSize(other.mFontSize), mFilePath(other.mFilePath), mFont(nullptr)
{
    mFont = al_load_ttf_font(other.mFilePath.c_str(), other.mFontSize, 0);
    assert(mFont);
}

Font::~Font()
{
    al_destroy_font(mFont);
}
