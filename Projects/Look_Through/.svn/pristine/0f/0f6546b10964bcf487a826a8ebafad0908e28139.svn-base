#include "GameEvents.h"

GameEvent::GameEvent(GameEventType type) : 
    Event((EventType)type)
{}

PlayerTurnEvent::PlayerTurnEvent(PlayerEventType type, TurnDirection dir) : 
    Event((EventType)type), mDir(dir)
{}

PlayerMoveEvent::PlayerMoveEvent(PlayerEventType type, MoveDirection dir) :
    Event((EventType)type), mDir(dir)
{}

PlayerShootEvent::PlayerShootEvent(PlayerEventType type) : 
    Event((EventType)type)
{}

PlayerHitEvent::PlayerHitEvent(PlayerNumber playerNumber) :
    Event((EventType)PlayerEventType::PLAYER_HIT), mPlayerNumber(playerNumber)
{}
