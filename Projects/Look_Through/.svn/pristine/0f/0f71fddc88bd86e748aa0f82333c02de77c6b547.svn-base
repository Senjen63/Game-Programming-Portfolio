#pragma once

#include <chrono>

class Time
{
    std::chrono::time_point< std::chrono::high_resolution_clock > mLastTime;
    std::chrono::time_point< std::chrono::high_resolution_clock > mNewTime;
    float mDeltaTime;
    float mTotalTime;
public:
    Time();

    [[nodiscard]] float getUnlockedDeltaTime() const;
    [[nodiscard]] float getDeltaTime() const;
    [[nodiscard]] float getTotalTime() const;
    void update();
};
