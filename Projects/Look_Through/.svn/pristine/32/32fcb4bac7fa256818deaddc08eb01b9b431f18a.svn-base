#include "Sprite.h"

#include "GraphicsBuffer.h"
#include <allegro5/allegro.h>

Sprite::Sprite(GraphicsBuffer* pBuffer, Vector2D location, int width, int height)
{
	mpBuffer = pBuffer;
	mLocation = location;
	mHeight = height;
	mWidth = width;
}

Sprite::Sprite(GraphicsBuffer* pBuffer)
{
	mpBuffer = pBuffer;
	mLocation = Vector2D(0, 0);
	mHeight = pBuffer->getHeight();
	mWidth = pBuffer->getWidth();
}
