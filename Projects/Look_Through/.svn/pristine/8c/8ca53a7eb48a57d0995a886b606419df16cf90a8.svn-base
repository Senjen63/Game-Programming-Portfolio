#pragma once

#include "GameEvent.h"
#include "Vector2D.h"

class SpawnTruckEvent : public GameEvent
{
	int mY, mNum;
	Vector2D mDirection;

public:

	SpawnTruckEvent(int y, Vector2D dir, int num) : GameEvent(GameEventType::SPAWN_TRUCK_EVENT), mY(y), mDirection(dir), mNum(num) {};
	~SpawnTruckEvent() {};

	int getNum() const { return mNum; };
	int getY() const { return mY; };
	Vector2D getDir() const { return mDirection; };
};


