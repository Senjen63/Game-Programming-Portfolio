#pragma once

#include "Animation.h"
#include "InputSystem.h"

//Unit Class

class Unit
{
	friend InputSystem;
public:
	//Constructor/Destructor
	Unit();
	Unit(int x, int y, Animation* animation);
	~Unit();

	//Mutator
	void setAnimation(Animation* newAnimation); //change to new animation
	void setPosition(int x, int y) { xPos = x; yPos = y; }

	//Member functions
	void update(float timeElapsed); //adjust state of animation through Animation's update function + other
	void draw(); // draw current sprite in unit location

private:
	Animation* currentAnimation;
	int xPos;
	int yPos;
};