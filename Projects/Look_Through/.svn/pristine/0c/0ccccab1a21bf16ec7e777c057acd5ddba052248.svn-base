#include "GraphicsBuffer.h"

GraphicsBuffer::GraphicsBuffer(std::string imageFilePath)
{
	mpSurface = SDL_LoadBMP(imageFilePath.c_str());
}

GraphicsBuffer::GraphicsBuffer(SDL_Surface* surfaceParam)
{
	mpSurface = surfaceParam;
}

GraphicsBuffer::~GraphicsBuffer()
{
	SDL_FreeSurface(mpSurface);
	//delete mpSurface;
}