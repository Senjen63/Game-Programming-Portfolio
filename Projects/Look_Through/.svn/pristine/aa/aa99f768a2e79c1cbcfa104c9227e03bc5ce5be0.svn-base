#include "Font.h"


Font::Font(std::string fullPath, int fontSize)
{
	loadNewFont(fullPath, fontSize);
}


Font::~Font()
{
	if (mpBackingFont) delete mpBackingFont;
}


void Font::loadNewFont(std::string fullPath, int fontSize)
{
	/*if (mpBackingFont) al_destroy_font(mpBackingFont);

	mpBackingFont = al_load_ttf_font(fullPath.c_str(), fontSize, 0);*/
	
	if (mpBackingFont) delete mpBackingFont;

	mpBackingFont = new sf::Font();
	mpBackingFont->loadFromFile(fullPath);

	mFontSize = fontSize;
}
