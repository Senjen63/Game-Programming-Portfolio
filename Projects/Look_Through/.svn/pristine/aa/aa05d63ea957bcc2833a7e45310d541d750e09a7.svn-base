#include "Color.h"
Color::Color()
{
	mColor.r = 0;
	mColor.g = 0;
	mColor.b = 0;
}


Color::Color(int r, int g, int b)
{
	mColor.r = r;
	mColor.g = g;
	mColor.b = b;
	mColor.a = 255;
}


Color::~Color()
{
	mColor.r = 0;
	mColor.g = 0;
	mColor.b = 0;
}


SDL_Color Color::GetColor()
{
	return mColor;
}