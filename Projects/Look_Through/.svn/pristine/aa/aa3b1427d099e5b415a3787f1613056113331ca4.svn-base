#pragma once
#include "Animation.h"
#include "Game.h"

class Unit : public Trackable
{
public:
	Unit(int x, int y, Animation* anim, Animation* anim2 = nullptr);
	~Unit();

	void update(float elapsedTime);
	void draw();

	void swapAnimation() { mUsingAltAnimation = !mUsingAltAnimation; }

	void enableAnimation();
	void disableAnimation();
	bool getAnimationEnabled();

	void setAnimationA(Animation* newAnimation) { mUnitAnimationA = newAnimation; }
	void setAnimationB(Animation* newAnimation) { mUnitAnimationB = newAnimation; }

	void setPosition(int x, int y) { mX = x; mY = y; }
	bool collision(int colX, int colY);
private:
	int mX;
	int mY;
	bool mUsingAltAnimation = false;

	Animation* mUnitAnimationA;
	Animation* mUnitAnimationB;
};
