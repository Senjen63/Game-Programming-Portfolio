#pragma once
#include "Vector2D.h"
#include <vector>
#include "GraphicsBuffer.h"

class Level : public Trackable
{
private:
	vector<Vector2D> mWallLocations;
	vector<Vector2D> mEmptyLocations;
public:

	//Tile size is 80

	Level() {};
	~Level() {};

	vector<Vector2D> getWallLocations() { return mWallLocations; };
	vector<Vector2D> getEmptyLocations() { return mEmptyLocations; };
	void addEmptyLocation(Vector2D pos) { mEmptyLocations.push_back(pos); };
	void addWallLocation(Vector2D pos) { mWallLocations.push_back(pos); };
	void removeEmptyLocation(Vector2D vec);
};