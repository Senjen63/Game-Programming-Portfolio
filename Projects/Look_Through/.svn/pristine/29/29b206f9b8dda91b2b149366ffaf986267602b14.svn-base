#include "Player.h"

void Player::SetFlying(bool isFlying)
{
	mIsFlying = isFlying;
	mIsAnimating = isFlying;
}
void Player::Update(float t) 
{
	if (mIsFlying) 
	{
		mPosition.setY(mPosition.getY() - mSpeed * t);
	}else
	{
 		mPosition.setY(mPosition.getY() + mSpeed * t);
	}
	Unit::Update(t);
}
void Player::SetSpeed(float newSpeed)
{
	mSpeed = newSpeed;
}
