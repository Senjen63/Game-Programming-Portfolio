#pragma once

#include "Trackable.h"
#include "Animation.h"
#include <Vector2D.h>

enum WallType
{
	WALL = 1,
	PIT = 2,
	EXIT = 3
};

class Wall : public Trackable
{

	const float SPRITE_SIZE = 32.0f;

public:

	Wall();
	Wall(int x, int y, Animation* anim, WallType type);
	~Wall();

	float getX() { return mLocation.getX(); }
	float getY() { return mLocation.getY(); }
	float getSize() { return mCurrentSize; }
	WallType getType() { return mWallType; }

	void update(double elapsedTime);
	void draw();

private:

	float mCurrentSize;
	Vector2D mLocation;
	WallType mWallType;
	Animation* mpAnimation;
};
