#include "InputSystem.h"
#include <iostream>
using namespace std;

InputSystem::InputSystem()
{

}

InputSystem::~InputSystem()
{
}

void InputSystem::initialize()
{

	if (!al_install_keyboard())
	{
		cout << "Error Installing Keyboard!" << endl;
		system("pause");
	}

	if (!al_install_mouse())
	{
		cout << "Error Installing Mouse!" << endl;
		system("pause");
	}
}

bool InputSystem::keyboardState(int keyNum)
{
	al_get_keyboard_state(&mKeyState);

	return al_key_down(&mKeyState, keyNum);
}

bool InputSystem::mouseDown()
{
	al_get_mouse_state(&mMouseState);
	return al_mouse_button_down(&mMouseState, 1);
}

void InputSystem::cleanUp()
{
}

Vector2D InputSystem::getMouseLoc()
{
	return Vector2D(mMouseState.x, mMouseState.y);
}