#pragma once

#include "Trackable.h"
#include <allegro5/allegro5.h>

class Color : public Trackable
{
public:
	Color(int red, int green, int blue) { mRed = red; mGreen = green; mBlue = blue; mAlpha = 255; };
	Color(int red, int green, int blue, int alpha) { mRed = red; mGreen = green; mBlue = blue; mAlpha = alpha; };
	~Color() {};
	ALLEGRO_COLOR getColor() { return al_map_rgba(mRed, mGreen, mBlue, mAlpha); };
private:
	int mRed, mGreen, mBlue, mAlpha;
};