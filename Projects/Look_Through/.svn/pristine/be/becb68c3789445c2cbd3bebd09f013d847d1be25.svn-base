//No guidance given

#include "Color.h"

Color::Color()
{
    this->mColor = al_map_rgb(0, 0, 0);
}

//THIS SETUP IS SOMEWHAT REDUNDANT AND UNCECESSARY BUT WHY NOT, ITS NOT GONNA HURT ANYTHING
Color::Color(unsigned int r, unsigned int g, unsigned int b)
{
    this->mColor = al_map_rgb(r, g, b);
    mRed = r;
    mGreen = g;
    mBlue = b;
    mAlpha = 255;
}

//THIS SETUP IS SOMEWHAT REDUNDANT AND UNCECESSARY BUT WHY NOT, ITS NOT GONNA HURT ANYTHING
Color::Color(unsigned int r, unsigned int g, unsigned int b, float a)
{
    this->mColor = al_map_rgba(r, g, b, a);
    mRed = r;
    mGreen = g;
    mBlue = b;
    mAlpha = a;
}

Color::~Color()
{

}

ALLEGRO_COLOR Color::getColor()
{
    return mColor;
}

int Color::getRed()
{
    return mRed;
}

int Color::getGreen()
{
    return mGreen;
}

int Color::getBlue()
{
    return mBlue;
}

float Color::getAlpha()
{
    return mAlpha;
}