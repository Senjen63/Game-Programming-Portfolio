#include "Sprite.h"

Sprite::Sprite(GraphicsBuffer* pBitmap, Vector2D Location, int Width, int Height)
{
	mpBitmap = pBitmap;
	mLocation = Location;
	mWidth = Width;
	mHeight = Height;
}

Sprite::~Sprite()
{

}

GraphicsBuffer* Sprite::getBitmap()
{
	return mpBitmap;
}

Vector2D Sprite::getLoc()
{
	return mLocation;
}

int Sprite::getWidth()
{
	return mWidth;
}

int Sprite::getHeight()
{
	return mHeight;
}

void Sprite::setLoc(Vector2D loc)
{
	mLocation.setX(loc.getX());
	mLocation.setY(loc.getY());
}
