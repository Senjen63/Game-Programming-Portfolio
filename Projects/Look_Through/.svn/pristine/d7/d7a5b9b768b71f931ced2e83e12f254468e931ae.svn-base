#include "AnimationManager.h"

void AnimationManager::createAnim(string animName, GraphicsBuffer* frames, int columns, int rows, int fps, bool shouldLoop)
{
    Animation* buffer = new Animation();
    buffer->addSprite(frames, columns, rows, fps, shouldLoop);
    mpAnimations[animName] = buffer;
}

void AnimationManager::delBuffer(string buffName)
{
    for (map<std::string, Animation*>::iterator itr = mpAnimations.begin(); itr != mpAnimations.end(); itr++)
    {
        if (itr->first == buffName)
        {
            delete itr->second;
            mpAnimations.erase(itr);
            return;
        }
    }
}

void AnimationManager::removeAllAnims()
{
    for (map<string, Animation*>::iterator itr = mpAnimations.begin(); itr != mpAnimations.end(); itr++)
    {
        delete itr->second;
    }

    mpAnimations.clear();
}