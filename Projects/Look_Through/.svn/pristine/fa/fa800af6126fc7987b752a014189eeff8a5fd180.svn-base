#pragma once

#include "GameEvent.h"

class ScoreChangeEvent : public GameEvent
{
	int mScoreModification;

public:
	ScoreChangeEvent(int scoreModification = 10) : GameEvent(GameEventType::SCORE_CHANGE_EVENT), mScoreModification(scoreModification) {}
	~ScoreChangeEvent() {}

	int getScoreModification() const { return mScoreModification; }
};

