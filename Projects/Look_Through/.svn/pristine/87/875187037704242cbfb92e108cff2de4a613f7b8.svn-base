#include "LevelManager.h"

LevelManager::LevelManager()
{
	mCurrent = 0;
	mSize = 0;
}

LevelManager::~LevelManager()
{
	cleanUp();
}

void LevelManager::addLevel(string filename, Sprite wall)
{
	Level* level = new Level(filename, wall);
	mpLevelList.push_back(level);
	mSize++;
}

Level* LevelManager::getLevel()
{
	return mpLevelList[mCurrent];
}

void LevelManager::setLevel(int level)
{
	mCurrent = level;
}

int LevelManager::getSize()
{
	return mSize;
}

void LevelManager::cleanUp()
{
	for (int i = 0; i < mSize; i++)
	{
		mpLevelList[i]->clearLevel();
		delete mpLevelList[i];
	}
	mSize = 0;
	mCurrent = 0;
}

