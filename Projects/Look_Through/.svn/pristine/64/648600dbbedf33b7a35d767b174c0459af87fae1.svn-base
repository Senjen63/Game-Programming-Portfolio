#include "Sound.h"
#include "Game.h"


void Sound::loadFile(const std::string& bufferName)
{
	if (mpSoundSource != nullptr) delete mpSoundSource;

	SoundBufferManager* sbm = Game::getInstance()->getSoundBufferManager();
	SoundBuffer& soundBuffer = sbm->getSoundBuffer(bufferName);

	mpSoundSource = new sf::Sound(soundBuffer.mSoundBuffer);
}