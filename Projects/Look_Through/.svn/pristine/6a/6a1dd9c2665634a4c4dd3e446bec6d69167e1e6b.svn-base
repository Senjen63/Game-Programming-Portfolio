Sprite::Sprite()
{
	buffer = NULL;
	sLocX = 0;
	sLocY = 0;
	sWidth = 0;
	sHeight = 0;
}
Sprite::Sprite(GraphicsBuffer*& buffer, float sLocX, float sLocY, int sWidth, int sHeight)
{
	this->buffer = buffer;
	this->sLocX = sLocX;
	this->sLocY = sLocY;
	this->sWidth = sWidth;
	this->sHeight = sHeight;
}
Sprite::~Sprite()
{
	buffer = NULL;
}
GraphicsBuffer* Sprite::getBuffer()
{
	return buffer;
}
float Sprite::getLocX()
{
	return sLocX;
}
float Sprite::getLocY()
{
	return sLocY;
}
int Sprite::getWidth()
{
	return sWidth;
}
int Sprite::getHeight()
{
	return sHeight;
}