#pragma once

#include <string>
#include <Trackable.h>
#include <SFML/Graphics/Font.hpp>

class Font : public Trackable
{
	friend class GraphicsSystem;

private:
	sf::Font* mpBackingFont;
	int mFontSize;
public:
	operator sf::Font* () const { return mpBackingFont; }
	sf::Font* getBackingFont() const { return mpBackingFont; }

public:
	Font(std::string fullPath, int fontSize);
	~Font();

	void loadNewFont(std::string fullPath, int fontSize);

	int getSize() { return mFontSize; }
	void setSize(int fontSize) { mFontSize = fontSize; }
};

