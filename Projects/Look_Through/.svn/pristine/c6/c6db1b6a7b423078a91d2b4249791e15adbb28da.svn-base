//----------------------------------------Font----------------------------------------

Font::Font(int size, std::string type) {
	FontStyle = al_load_ttf_font((mDEAN_FILE_PATH + type).c_str(), size, 0);
	assert(FontStyle);
	FontSize = size;
}

Font::~Font() {
	al_destroy_font(FontStyle);
}


//----------------------------------------Color----------------------------------------

Color::Color(int r, int g, int b, int opacity) {
	if (opacity <= 0) {
		color = al_map_rgb(r, g, b);
	}
	else {
		color = al_map_rgba(r, g, b, opacity);
	}
	R = r;
	G = g;
	B = b;
	Op = opacity;
}

Color::~Color() {

}