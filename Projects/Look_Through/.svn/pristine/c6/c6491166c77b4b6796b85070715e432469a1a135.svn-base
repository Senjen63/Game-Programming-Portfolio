#include "LevelManager.h"
#include "Level.h"

void LevelManager::addFilename(string filename)
{
    mvLevelFilenames.push_back(filename);
}

void LevelManager::restartAtFirstLevel()
{
    mCurrentLevel = 0;
}

Level* LevelManager::getNextLevel()
{
    if (mCurrentLevel >= (int)mvLevelFilenames.size() - 1)
    {
        restartAtFirstLevel();
    }
    else
    {
        mCurrentLevel++;
    }
    
    return getCurrentLevel();
}

Level* LevelManager::getCurrentLevel()
{
    return new Level(mvLevelFilenames[mCurrentLevel]);
}
