#pragma once
#include <allegro5/allegro.h>
#include <allegro5/allegro_font.h>
#include "PerformanceTracker.h"

enum class KeyCode
{
	//letter keys
	AKEY = ALLEGRO_KEY_A, BKEY = ALLEGRO_KEY_B, CKEY = ALLEGRO_KEY_C, DKEY = ALLEGRO_KEY_D, EKEY = ALLEGRO_KEY_E, FKEY = ALLEGRO_KEY_F,
	GKEY = ALLEGRO_KEY_G, HKEY = ALLEGRO_KEY_H, IKEY = ALLEGRO_KEY_I, JKEY = ALLEGRO_KEY_J, KKEY = ALLEGRO_KEY_K, LKEY = ALLEGRO_KEY_L,
	MKEY = ALLEGRO_KEY_M, NKEY = ALLEGRO_KEY_N, OKEY = ALLEGRO_KEY_O, PKEY = ALLEGRO_KEY_P, QKEY = ALLEGRO_KEY_Q, RKEY = ALLEGRO_KEY_R,
	SKEY = ALLEGRO_KEY_S, TKEY = ALLEGRO_KEY_T, UKEY = ALLEGRO_KEY_U, VKEY = ALLEGRO_KEY_V, WKEY = ALLEGRO_KEY_W, XKEY = ALLEGRO_KEY_X,
	YKEY = ALLEGRO_KEY_Y, ZKEY = ALLEGRO_KEY_Z,
	//number keys
	ONEKEY = ALLEGRO_KEY_1, TWOKEY = ALLEGRO_KEY_2, THREEKEY = ALLEGRO_KEY_3, FOURKEY = ALLEGRO_KEY_4, FIVEKEY = ALLEGRO_KEY_5,
	SIXKEY = ALLEGRO_KEY_6, SEVENKEY = ALLEGRO_KEY_7, EIGHTKEY = ALLEGRO_KEY_8, NINEKEY = ALLEGRO_KEY_9, ZEROKEY = ALLEGRO_KEY_0,
	//mis keys
	ESCAPE = ALLEGRO_KEY_ESCAPE, ENTER = ALLEGRO_KEY_ENTER, SPACE = ALLEGRO_KEY_SPACE,
	//mouse buttons
	LEFTMOUSE = 1, RIGHTMOUSE = 2
};

class InputSystem : public Trackable
{
public:
	InputSystem();
	~InputSystem();

	void init();
	void cleanup();

	bool getKeyboardInput( KeyCode key );
	bool getMouseInput( KeyCode mouse );
	int getMouseX() { return mpMouseState.x; };
	int getMouseY() { return mpMouseState.y; };

private:
	ALLEGRO_KEYBOARD_STATE mpKeyboardState;
	ALLEGRO_MOUSE_STATE mpMouseState;
};