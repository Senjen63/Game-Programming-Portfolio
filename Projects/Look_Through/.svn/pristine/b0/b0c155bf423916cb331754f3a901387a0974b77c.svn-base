#include "Sprite.h"

Sprite::Sprite()
{
	mHeight = 0;
	mWidth = 0;
	mpGraphicsBuffer = nullptr;
}

Sprite::Sprite(GraphicsBuffer* graphicsBuffer, Vector2D location, int height, int width)
{
	mHeight = height;
	mWidth = width;
	mLocation = location;
	mpGraphicsBuffer = graphicsBuffer;
}

Sprite::Sprite(GraphicsBuffer* graphicsBuffer, Vector2D location)
{
	mHeight = graphicsBuffer->getHeight();
	mWidth = graphicsBuffer->getWidth();
	mLocation = location;
	mpGraphicsBuffer = graphicsBuffer;
}

Sprite::~Sprite()
{
}

int Sprite::getHeight()
{
	return mHeight;
}

int Sprite::getWidth()
{
	return mWidth;
}

GraphicsBuffer* Sprite::getBuffer()
{
	return mpGraphicsBuffer;
}

Vector2D Sprite::getLocation()
{
	return mLocation;
}