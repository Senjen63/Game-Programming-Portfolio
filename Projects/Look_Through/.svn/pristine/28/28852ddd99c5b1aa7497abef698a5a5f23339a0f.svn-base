#pragma once

#include <Trackable.h>
#include "Vector2D.h"
#include "Animation.h"

class Color;

class PowerUps : public Trackable
{
	private:
		Color* mpSlowDownColor;
		Color* mpSpeedUpColor;
		Color* mpBonusPointColor;
		Color* mpFoodColor;

		Vector2D mFoodLocation;
		Vector2D mBonusPointLocation;
		Vector2D mSlowSpeedLocation;

		Animation mSlowDownAnimation;
		Animation mSpeedUpAnimation;
		Animation mBonusPointAnimation;
		Animation mFoodAnimation;

		bool mIsSlow;
	public:
		PowerUps();
		~PowerUps();

		void initPowerUpLocations();
		void createPowerUpUnits();
		void drawPowerUps();

		bool getIsSlow() { return mIsSlow; }
		Vector2D getFoodLocation() { return mFoodLocation; }
		Vector2D getBonusPointLocation() { return mBonusPointLocation; }
		Vector2D getSlowSpeedLocation() { return mSlowSpeedLocation; }

		Animation getFoodAnimation() { return mFoodAnimation; }
		Animation getBonusPointAnimation() { return mBonusPointAnimation; }
		Animation getSlowDownAnimation() { return mSlowDownAnimation; }
		Animation getSpeedUpAnimation() { return mSpeedUpAnimation; }
};