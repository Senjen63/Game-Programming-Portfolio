#pragma once

#include "..\Unit.h"

class PieceManager;

class Pawn : public Unit
{
private:
	bool mSelected = false;
	bool mFirstMove;
	bool mWhite;
	vector<Unit*> mpMovePts;
	vector<Unit*> mpAttackPts;

public:
	Pawn();
	Pawn(GraphicsBuffer* pBuffer, Vector2D location, bool white, bool firstMove);
	~Pawn();

	void cleanUp();
	void createMovePts();
