#pragma once

#include <Trackable.h>
#include <Vector2D.h>

#include "Animation.h"

class Sprite;

class Unit : public Trackable
{
	friend class UnitManager;

public:
		
	void update(double dt);
	void draw();
	void toggleAnimation();
	void setLocation(Vector2D location);

private:

	Unit(Vector2D location, Animation mainAnim, Animation altAnim)
		: mLocation(location),
		mMainAnim(mainAnim),
		mAltAnim(altAnim)
	{
		mpCurrentAnim = &mMainAnim;
		updateDrawLocation();
	};
	~Unit() {};

	void updateDrawLocation();

	Vector2D mLocation = Vector2D(0,0);
	Vector2D mDrawLocation = Vector2D(0, 0);

	Animation mMainAnim;
	Animation mAltAnim;

	Animation* mpCurrentAnim = nullptr;

	int mAnimWidth = 0;
	int mAnimHeight = 0;
};

