#include "Singleton.h"
#include <cassert>

using namespace std;

Singleton* Singleton::mpsInstance = NULL;

Singleton* Singleton::getInstance()
{
	assert(mpsInstance);
	return mpsInstance;
}


void Singleton::destroyInstance()
{
	delete mpsInstance;
	mpsInstance = NULL;
}

void Singleton::createInstance()
{
	if (mpsInstance == NULL)
	{
		mpsInstance = new Singleton;
	}
}

