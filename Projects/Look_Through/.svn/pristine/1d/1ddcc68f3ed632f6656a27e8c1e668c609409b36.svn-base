#pragma once
#include <SFML/Window/Keyboard.hpp>
#include <SFML/Window/Mouse.hpp>

#include "Trackable.h"

class InputSystem : public Trackable
{
public:
	InputSystem();
	~InputSystem();

	void update();

	bool getKeyState(int keyCode) { return sf::Keyboard::isKeyPressed(sf::Keyboard::Key(keyCode)); }
	bool getMouseState(int mouseCode) { return sf::Mouse::isButtonPressed(sf::Mouse::Button(mouseCode)); }
	int getMouseX() { return int(sf::Mouse::getPosition().x); }
	int getMouseY() { return int(sf::Mouse::getPosition().y); }

	const int SFML_KEYS_TO_CHECK = 86;
private:

};
