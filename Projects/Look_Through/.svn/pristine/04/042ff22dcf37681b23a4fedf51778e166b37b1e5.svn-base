
#include "InputSystem.h"

InputSystem::InputSystem()
{
	ALLEGRO_KEYBOARD_STATE* keyboard = new ALLEGRO_KEYBOARD_STATE();
	this->keyboard = keyboard;
	ALLEGRO_MOUSE_STATE* mouse = new ALLEGRO_MOUSE_STATE();
	this->mouse = mouse;
}
bool InputSystem::getKeyState(int keycode)
{
	if (al_key_down(keyboard, keycode))
	{
		return true;
	}
	return false;
};

bool InputSystem::getMouseState(int button)
{
	if(al_mouse_button_down(mouse, button))
	{
		return true;
	}
	return false;
}

