#include "HUD.h"

HUDClass::HUDClass(Font* font)
{
	mpFont = font;
	mWhite = Color(255, 255, 255, 255);
}

HUDClass::~HUDClass() {}

void HUDClass::timeAndFPSText(GraphicsSystem* mpGraphics, GraphicsBuffer* buffer, double time, double fps)
{
	buffer->setColor(mClearColor);

	string timeString = to_string(time);
	mpGraphics->writeText(buffer, 130, 50, mpFont, mWhite, ("Time: " + timeString).c_str());
	
	string fpsString = to_string(fps);
	mpGraphics->writeText(buffer, 400, 50, mpFont, mWhite, ("FPS: " + fpsString).c_str());

	mpGraphics->draw(buffer, 0, 0, 1);
}

void HUDClass::scoreText(GraphicsSystem* mpGraphics, GraphicsBuffer* buffer, int score)
{
	string scoreString = to_string(score);
	mpGraphics->writeText(buffer, 600, 50, mpFont, mWhite, ("Score: " + scoreString).c_str());

	mpGraphics->draw(buffer, 0, 0, 1);
}