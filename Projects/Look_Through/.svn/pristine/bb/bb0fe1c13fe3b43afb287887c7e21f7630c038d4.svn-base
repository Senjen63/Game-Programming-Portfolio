#include "Font.h"

#include <cassert>

Font::Font(const std::string& pathToFont, int fontSize) : 
    mFontSize(fontSize)
{
    mpFont = std::shared_ptr<TTF_Font>(TTF_OpenFont(pathToFont.c_str(), fontSize), TTF_Deleter{});

    if (mpFont == NULL)
    {
        printf("Failed to Create Font: %s\n", TTF_GetError());
        assert(false);
    }
}
