#include "Font.h"
Font::Font()
{

	mpFont = NULL;
	mFontSize = 0;
}


Font::Font(string fontPath, int fontSize)
{
	mpFont = TTF_OpenFont(fontPath.c_str(), fontSize);
	mFontSize = fontSize;
}


Font::~Font()
{
	TTF_CloseFont(mpFont);
	mFontSize = 0;
}

TTF_Font* Font::GetFont() 
{
	return mpFont;
}

int Font::GetFontSize()
{
	return mFontSize;
}