#include <iostream>
#include <cassert>
#include <string>

#include<Trackable.h>
//#include "Graphics.h"

class GraphicsBuffer;

//A pointer to a specific part of a GraphicsBuffer 
class Sprite {
public:
	//constructor/destructor
	Sprite();
	Sprite(int width, int height, int x, int y, GraphicsBuffer* gBuffer);
	~Sprite() {};

	//accessors
	int getSourceX() { return spriteX; };
	int getSourceY() { return spriteY; };
	int getHeight() { return SpriteHeight; };
	int getWidth() { return SpriteWidth; };
	GraphicsBuffer* getGraphicsBuffer() { return graphicsBuffer; };

private:
	/*
	- Pointer to the GraphicsBuffer which contains the bitmap
	- Source loc (upper left-hand corner of where sprite begins)
	- Width and height of sprite
	*/
	int SpriteWidth;
	int SpriteHeight;
	int spriteX;
	int spriteY;
	GraphicsBuffer* graphicsBuffer;
};
