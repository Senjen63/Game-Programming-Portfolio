#pragma once

#include <allegro5/allegro.h>
#include <string>
#include <Trackable.h>
#include <Vector2D.h>

class GraphicsBuffer : public Trackable
{
	friend class GraphicsSystem;
	friend class Sprite;

private:
	ALLEGRO_BITMAP* mpBitmap;
	bool mOwnsBitmap;

	GraphicsBuffer(ALLEGRO_BITMAP* pBitmap);

	ALLEGRO_BITMAP* getBitmap() const { return mpBitmap; }

public:
	GraphicsBuffer(std::string fullPath);
	GraphicsBuffer(Vector2D size); // Creates empty Graphics Buffer of size width x height
	GraphicsBuffer(GraphicsBuffer* og);

	~GraphicsBuffer();

	int getWidth() const { al_get_bitmap_width(mpBitmap); };
	int getHeight() const { al_get_bitmap_height(mpBitmap); };
};

