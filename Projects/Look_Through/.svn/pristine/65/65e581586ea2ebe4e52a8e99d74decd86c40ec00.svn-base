#pragma once
#include <string>

#include "GraphicsBuffer.h"

class Sprite : public Trackable
{
public:
	Sprite();
	Sprite(GraphicsBuffer* baseBuffer, int x, int y);
	Sprite(GraphicsBuffer* baseBuffer, int x, int y, int width, int height);
	~Sprite();

	int getHeight() { return sHeight; }
	int getWidth() { return sWidth; }
	int getX() { return sX; }
	int getY() { return sY; }
	GraphicsBuffer* getBuffer() { return bufferUsed; }
private:
	GraphicsBuffer* bufferUsed;
	int sX;
	int sY;
	int sWidth;
	int sHeight;
};
