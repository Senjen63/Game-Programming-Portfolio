#include "Color.h"

Color::Color( unsigned int r, unsigned int g, unsigned int b )
{
    mRed = r;
    mGreen = g;
    mBlue = b;
    mAlpha = 255;
}


Color::Color( unsigned int r, unsigned int g, unsigned int b, float a )
{
    mRed = r;
    mGreen = g;
    mBlue = b;
    mAlpha = a;
}


Color::~Color()
{
    
}


int Color::getRed()
{
    return mRed;
}


int Color::getGreen()
{
    return mGreen;
}


int Color::getBlue()
{
    return mBlue;
}


float Color::getAlpha()
{
    return mAlpha;
}