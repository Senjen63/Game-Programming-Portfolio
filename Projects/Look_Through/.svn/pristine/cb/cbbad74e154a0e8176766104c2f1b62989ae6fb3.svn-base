#include "HUD.h"

HUD::HUD()
{
	const std::string FONT_LOCATION = "../../common/assets/";
	const std::string FONT_NAME = "cour.ttf";
	mpHUDFont = new Font(FONT_LOCATION + FONT_NAME, 25);
}

HUD::~HUD()
{
	delete mpHUDFont;
}

void HUD::updateHUD(GraphicsSystem* currentGraphicsSystem, std::string HUDText, std::pair<float, float>position)
{
	currentGraphicsSystem->writeText(position.first, position.second, mpHUDFont, mColorBlack, HUDText);
}