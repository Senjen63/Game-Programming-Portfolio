#include "Collider.h"
#include "Game.h"

Collider::Collider(ColliderType colliderType, CollisionTag collisionTag) :
    Component(COLLIDER_TYPE), mColliderType(colliderType), mCollisionTag(collisionTag)
{
    Game::getInstance()->getCollisionManager()->addCollider(this);
}

Collider::Collider(const Collider& other) : 
    Component(COLLIDER_TYPE), mColliderType(other.mColliderType), mCollisionTag(other.mCollisionTag), mPosition(other.mPosition)
{
    mpParentEntity = nullptr;
}

Collider::~Collider()
{
    Game::getInstance()->getCollisionManager()->removeCollider(this);
}

void Collider::Update(double deltaTime)
{
    if (mpParentEntity)
        resetPosition();
}
