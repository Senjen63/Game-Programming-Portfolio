#pragma once
#include "sprite.h"

 /* Pre:  Nothing
 *  Post:  A sprite
 *  Purpose:  Create Sprite
 *********************************************************/
Sprite::Sprite()
{
	mpSprite = nullptr;
	mLoc = Vector2D(0, 0);
	mWidth = DEFAULT_WIDTH;
	mHeight = DEFAULT_HEIGHT;
}

/* Pre:  A sprite
*  Post:  Nothing
*  Purpose:  Create Sprite
*********************************************************/
Sprite::~Sprite()
{

	mpSprite = nullptr;
}

/* Pre:  Nothing
*  Post:  A sprite
*  Purpose:  Create Sprite
*********************************************************/
Sprite::Sprite(Vector2D loca, int hi, int wi, GraphicsBuffer* spri)
{
	mLoc = loca;
	mHeight = hi;
	mWidth = wi;
	mpSprite = spri;
}

/* Pre:  A location
*  Post:  Nothing
*  Purpose:  Set Location
*********************************************************/
void Sprite::setLoc(Vector2D loca)
{
	mLoc = loca;
}

/* Pre:  A height
*  Post:  Nothing
*  Purpose:  Set Height
*********************************************************/
void Sprite::setHeight(int hi)
{
	mHeight = hi;
}

/* Pre:  A width
*  Post:  Nothing
*  Purpose:  Set Width
*********************************************************/
void Sprite::setWidth(int wi)
{
	mWidth = wi;
}

/* Pre:  A Sprite
*  Post:  Nothing
*  Purpose:  Set Sprite
*********************************************************/
void Sprite::setSprite(GraphicsBuffer* spri)
{
	mpSprite = spri;
}

/* Pre:  Nothing
*  Post:  A location
*  Purpose:  Get Location
*********************************************************/
Vector2D Sprite::getLoc()
{
	return mLoc;
}

/* Pre:  Nothing
*  Post:  A height
*  Purpose:  Get Height
*********************************************************/
int Sprite::getHeight()
{
	return mHeight;
}

/* Pre:  Nothing
*  Post:  A width
*  Purpose:  Get width
*********************************************************/
int Sprite::getWidth()
{
	return mWidth;
}

/* Pre:  Nothing
*  Post:  A sprite
*  Purpose:  Get sprite
*********************************************************/
GraphicsBuffer* Sprite::getSprite()
{
	return mpSprite;
}