#pragma once

#include <Trackable.h>
#include <Vector2D.h>

class GraphicsBuffer;

class Sprite : public Trackable
{
public:

	Sprite(GraphicsBuffer* pBuffer, Vector2D location, int width, int height);
	Sprite(GraphicsBuffer* pBuffer);
	~Sprite();

	GraphicsBuffer* getBuffer() { return mpBuffer; };
	Vector2D getLocation() { return mLocation; };
	int getHeight() { return mHeight; };
	int getWidth() { return mWidth; };

private:

	GraphicsBuffer* mpBuffer = nullptr;
	Vector2D mLocation;
	int mHeight;
	int mWidth;
};

