#include "sprite.h"

Sprite::Sprite()
{
	mSpriteHeight = 0;
	mSpriteWidth = 0;
	mpBitmap = NULL;
	mSourceLocation = Vector2D(0, 0);
}
Sprite::Sprite(GraphicsBuffer* buff, Vector2D xyLocation, int width, int height)
{
	mpBitmap = buff;
	mSourceLocation = xyLocation;
	mSpriteHeight = width;
	mSpriteHeight = height;
}
Sprite::~Sprite()
{
	//Unsure should i reset to null?
}
Vector2D Sprite::GetSourceLocation()
{
	return mSourceLocation;
}
void Sprite::SetSourceLocation(int x, int y)
{
	mSourceLocation = Vector2D(x, y);
}
int Sprite::GetSpriteWidth()
{
	return mSpriteWidth;
}
void Sprite::SetSpriteWidth(int newWidth)
{
	mSpriteWidth = newWidth;
}
int Sprite::GetSpriteHeight()
{
	return mSpriteHeight;
}
void Sprite::SetSpriteHeight(int newHeight)
{
	mSpriteHeight = newHeight;
}
GraphicsBuffer* Sprite::GetGraphicsBuffer()
{
	return mpBitmap;
}
void Sprite::SetGraphicsBuffer(GraphicsBuffer* pNewBitMap)
{
	mpBitmap = pNewBitMap;
}