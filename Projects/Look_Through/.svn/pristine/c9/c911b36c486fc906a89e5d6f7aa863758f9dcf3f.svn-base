#include "Sound.h"

Sound::Sound(string filename, float volume)
{
	mVolume = volume;
	mpSoundBuffer = new sf::SoundBuffer();
	mpSoundBuffer->loadFromFile(filename);
	mpSound = new sf::Sound();
	mpSound->setBuffer(*mpSoundBuffer);
	mpSound->setVolume(mVolume);
}

Sound::~Sound()
{
	delete mpSoundBuffer;
	delete mpSound;
}

float Sound::getVolume()
{
	return mVolume;
}

void Sound::setVolume(float volume)
{
	mVolume = volume;
	mpSound->setVolume(volume);
}

void Sound::play()
{
	mpSound->play();
}

bool Sound::getStatusPlaying()
{
	if (mpSound->getStatus() == sf::SoundSource::Status::Playing)
	{
		return true;
	}
	else
	{
		return false;
	}
}

bool Sound::getStatusPaused()
{
	if (mpSound->getStatus() == sf::SoundSource::Status::Paused)
	{
		return true;
	}
	else
	{
		return false;
	}
}

bool Sound::getStatusStopped()
{
	if (mpSound->getStatus() == sf::SoundSource::Status::Stopped)
	{
		return true;
	}
	else
	{
		return false;
	}
}
