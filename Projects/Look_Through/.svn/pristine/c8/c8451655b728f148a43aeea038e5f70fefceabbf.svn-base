#include "LevelManager.h"

LevelManager::LevelManager()
{
	mLevelCount = 0;
	mCurrentLevel = -1;
}

LevelManager::~LevelManager()
{

}

void LevelManager::cleanup()
{
	for (int i = 0; i < mpLevels.size(); i++)
	{
		delete mpLevels[i];
	}
}

void LevelManager::addLevel(Level* pLev)
{
	mpLevels.push_back(pLev);
	mLevelCount++;
}

Level* LevelManager::getLevel(int pos)
{
	return mpLevels[pos];
}

void LevelManager::setCurrentLevel(int level)
{
	mCurrentLevel = level;
}

int LevelManager::getCurrentLevel()
{
	return mCurrentLevel;
}