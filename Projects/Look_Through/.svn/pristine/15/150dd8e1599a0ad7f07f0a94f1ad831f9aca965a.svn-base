			for (j = 7; j < 14; j++)
			{
				if (!otherTeam.checkPosition(mpMovePts[j]->getPosition()) && otherTeam.inBounds(mpMovePts[j]->getPosition())
					 && !team.checkPosition(mpMovePts[j]->getPosition()))
