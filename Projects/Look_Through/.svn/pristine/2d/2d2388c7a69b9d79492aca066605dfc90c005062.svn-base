#include "Unit.h"

Unit::Unit()
{
	mpSmurfAnim = nullptr;
	mpDeanAnim = nullptr;
	mX = 0;
	mY = 0;
	mCurrentAnim = 0;
}

Unit::Unit(Animation* pSmurf, Animation* pDean, int x, int y)
{
	mpSmurfAnim = pSmurf;
	mpDeanAnim = pDean;
	mX = x;
	mY = y;
	mCurrentAnim = 0;
}

Unit::~Unit()
{
	mpSmurfAnim = nullptr;
	mpDeanAnim = nullptr;
	mX = 0;
	mY = 0;
	mCurrentAnim = 0;
}

float Unit::getTime()
{
	return mpSmurfAnim->getTime();
}

void Unit::update(double dt)
{
	mpSmurfAnim->update(dt);
	mpDeanAnim->update(dt);
}

Sprite* Unit::draw()
{
	if (mCurrentAnim == 0)
		return mpSmurfAnim->getCurrentSprite();
	else
		return mpDeanAnim->getCurrentSprite();
}

void Unit::setAnimation()
{
	if (mCurrentAnim == 0)
		mCurrentAnim = 1;
	else
		mCurrentAnim = 0;
}

void Unit::changeTiming(float timerChange)
{
	mpSmurfAnim->changeTimer(timerChange);
	mpDeanAnim->changeTimer(timerChange);
}