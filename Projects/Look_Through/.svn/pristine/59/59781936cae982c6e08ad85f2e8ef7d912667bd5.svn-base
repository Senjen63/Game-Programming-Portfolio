#include "TreeManager.h"

TreeManager::TreeManager() {}
TreeManager::~TreeManager() {}

void TreeManager::draw(GraphicsSystem* graphSys)
{
	Unit* pUnit = mpUnits[mCurrentAnimation];
	pUnit->draw(graphSys);
}

void TreeManager::setTree(int index)
{
	Unit* pUnit = mpUnits[mCurrentAnimation];
	pUnit->setAnimation(index);
}

bool TreeManager::collideWithTree(Vector2D loc)
{
	Vector2D treeLocation = mLocation + Vector2D(128, 128);
	Vector2D tobbLocation = loc;

	float dist = treeLocation.getDistanceBetween(treeLocation, tobbLocation);
	if (dist < 128)
	{
		return true;
		std::cout << "collision with a tree!" << std::endl;
	}

	return false;
}