
#include "Font.h"

#include <iostream>
using namespace std;

Font::Font()
{
	mpFont = NULL;
	mFontSize = 0;
}

Font::Font(string filePath, int fontSize)
{
	mpFont = al_load_ttf_font(filePath.c_str(), fontSize, 0);
	mFontSize = fontSize;
}

Font::~Font()
{
	al_destroy_font(mpFont);
	mFontSize = 0;
}

ALLEGRO_FONT* Font::getFont()
{
	return mpFont;
}

int Font::getFontSize()
{
	return mFontSize;
}