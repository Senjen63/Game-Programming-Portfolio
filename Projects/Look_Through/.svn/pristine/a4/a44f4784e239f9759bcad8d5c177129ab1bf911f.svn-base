#pragma once

#include <Trackable.h>
#include <unordered_map>

using namespace std;

typedef string OptionsKey;

class OptionsManager : public Trackable
{
private:
	unordered_map<OptionsKey, int> mOptionsMap;

	const OptionsKey SOUND_KEY = "sound_setting";
	const OptionsKey LANGUAGE_KEY = "language_setting";
	const OptionsKey DIFFICULTY_KEY = "difficulty_setting";

	const string OPTION_FILEPATH = "../GalahadAssets/saved/settings.txt";

	int getSetting(OptionsKey);

	int mNull;
public:
	OptionsManager();
	~OptionsManager();

	enum SoundSettings
	{
		ON,
		OFF
	};

	enum LanguageSettings
	{
		ENGLISH,
		SPANISH,
		FRENCH
	};

	enum DifficultySettings
	{
		EASY,
		NORMAL,
		HARD
	};

	void setSound(int);
	void setLanguage(int);
	void setDifficulty(int);

	int getSound();
	int getLanguage();
	int getDifficulty();

	void saveOptions();
};