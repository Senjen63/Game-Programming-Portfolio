#pragma once

#include "Trackable.h"
#include "Powerup.h"
#include <vector>

class Level : public Trackable
{

public:
	Level(int levelNum);
	~Level();

	void update(float elapsedTime);

	int getNum() { return mLevelNum; }
	int getPowerupTime() { return mPowerupTime; }
	int getStartingSize() { return mStartingSize; }
	int getNeededSize() { return mNeededSize; }
	int getSnakeSpeed() { return mSnakeSpeed; }
	int getFoodPoints() { return mPointsForFood; }

	void setPowerupTime(int time) { mPowerupTime = time; mTimeToPowerup = time; }
	void setStartingSize(int size) { mStartingSize = size; }
	void setNeededSize(int size) { mNeededSize = size; }
	void setSnakeSpeed(int speed) { mSnakeSpeed = speed; }
	void setFoodPoints(int points) { mPointsForFood = points; }
	void setPowerupChance(int powerup, int chance) { mPowerupChance[powerup] = chance; }
private:
	int mLevelNum;

	int mPointsForFood;
	int mSnakeSpeed;
	int mPowerupTime;
	int mTimeToPowerup;
	int mStartingSize;
	int mNeededSize;

	int mPowerupChance[3]; //arranged like this: % for speedup, % for speeddown, % for bonus points
};
