#include "listener.h"
#include <EventSystem.h>
#include "GameEvent.h"
#include "MoveEvent.h"



Listener::Listener()
{
	EventSystem* pEventSystem = EventSystem::getInstance();
	pEventSystem->addListener((EventType)MOVE_EVENT, this);
}

Listener::~Listener()
{

}

void Listener::handleEvent(const Event& theEvent)
{
	cout << endl << "EventListener:";
	if (theEvent.getType() == MOVE_EVENT)
	{
		const MoveEvent& moveEvent = static_cast<const MoveEvent&>(theEvent);
		cout << "\tMove to: " << moveEvent.getKey() << endl;
	}
}