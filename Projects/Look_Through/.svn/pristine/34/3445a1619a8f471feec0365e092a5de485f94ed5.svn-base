#include "Font.h"

Font::Font(string path, int size, int flag)
{

    mSize = size;
    if (flag == CENTER_ALIGN)
    {

        mpFont = al_load_ttf_font(path.c_str(),
            size, ALLEGRO_ALIGN_CENTER);
        mFlag = CENTER_ALIGN;

    }
    if (flag == LEFT_ALIGN)
    {

        mpFont = al_load_ttf_font(path.c_str(),
            size, 0);
        mFlag = LEFT_ALIGN;

    }
    else
    {

        mpFont = al_load_ttf_font(path.c_str(),
            size, ALLEGRO_ALIGN_RIGHT);
        mFlag = RIGHT_ALIGN;

    }
    
}

Font::~Font()
{
    al_destroy_font(mpFont);
}