#include "Text.h"

using namespace std;

Text::Text(int size, Font* fnt, std::string text, Color color)
{
	mFontSize = size;
	mFont = fnt;
	mColor = color;
	mTextContents = text;

	mText = new sf::Text(text.c_str(), *(mFont->mFont), size);
	mText->setFillColor(mColor.mColor);
}

Text::~Text()
{
	delete mText;
}