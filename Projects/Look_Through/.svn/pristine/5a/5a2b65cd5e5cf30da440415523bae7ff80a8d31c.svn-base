#pragma once

#include <allegro5/allegro.h>
#include <allegro5/allegro_image.h>
#include <allegro5/allegro_primitives.h>
#include <string>

#include "Color.h"

class GraphicsBuffer
{
	friend class GraphicsSystem;

public:
	GraphicsBuffer(ALLEGRO_BITMAP* pBitmap);
	GraphicsBuffer(int width, int height);
	GraphicsBuffer(std::string filename);
	~GraphicsBuffer();

	GraphicsBuffer(GraphicsBuffer&) = delete;

	int getHeight() { return al_get_bitmap_height(pBitmap); }
	int getWidth() { return al_get_bitmap_width(pBitmap); }

	void setColor(Color col);
private:
	ALLEGRO_BITMAP* pBitmap;
	bool ownsBitmap;
};