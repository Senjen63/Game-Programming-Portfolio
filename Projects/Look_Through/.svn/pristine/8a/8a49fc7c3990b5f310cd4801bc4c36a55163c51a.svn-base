#pragma once

#include <vector>

#include "Trackable.h"
#include "Unit.h"
#include "Vector2D.h"
#include "UnitParameters.h"

class Game;
class GraphicsSystem;

class UnitManager : public Trackable
{
	std::vector<Unit*> mUnits;
	std::vector<Unit*> mUnitsToAdd;
	std::vector<Unit*> mUnitsToDelete;

public:
	UnitManager();
	~UnitManager() { cleanup(); }

	Unit& createUnit(const UnitParameters& params, std::vector<Component*>& components); // Creates unit with parameters from UnitParameters
	bool deleteUnit(Unit& unit); // Returns whether or not unit found
	void deleteAllUnits(); // Puts every unit into delete vector
	std::vector<Unit*> getUnitsAtPos(Vector2D pos);

	int getNumUnits() { return mUnits.size(); }
	Unit* getUnit(int index) { return mUnits[index]; }

	void cleanup();

	void update(float dt); // dt in milliseconds
	void draw(GraphicsSystem* gSys);
};

