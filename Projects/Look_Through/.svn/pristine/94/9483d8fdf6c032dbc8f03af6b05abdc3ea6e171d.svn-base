#include "Font.h"
#include <iostream>
using namespace std;

Font::Font()
{
	mpFont = nullptr;
	mFontSize = 0;
}

Font::Font(int fontSize, string filename)
{
	mFontSize = fontSize;
	mpFont = al_load_ttf_font((filename).c_str(), fontSize, 0);
	assert(mpFont);
}

Font::~Font()
{
	al_destroy_font(mpFont);
	mFontSize = 0;
}

int Font::getSize()
{
	return mFontSize;
}