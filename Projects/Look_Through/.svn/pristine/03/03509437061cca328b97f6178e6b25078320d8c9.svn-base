#pragma once

#include "Animation.h"
#include "GraphicsSystem.h"
#include "EventListener.h"

class Unit
{
public:
	Unit(std::pair<float, float>location, Animation* currentAnimation);
	Unit(std::pair<float, float>location);
	~Unit();

	virtual void update(float deltaTime);
	virtual void draw(GraphicsSystem* currentGraphicsSystem);
	void setAnimation(Animation* newAnimation);

	Animation* getAnimation() { return mpCurrentAnimation; }
	std::pair<float, float> getLocation() { return mLocation; }
	void updateLocation(std::pair<float, float> newLocation) { mLocation = newLocation; }

private:
	std::pair<float, float> mLocation;
	Animation* mpCurrentAnimation;
};