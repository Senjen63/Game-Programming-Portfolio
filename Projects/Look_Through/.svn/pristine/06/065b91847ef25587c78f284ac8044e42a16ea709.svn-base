#pragma once
#include "GameEvent.h"

enum class PlayerAction
{
	INVALID_ACTION = -1,
	QUIT_GAME,
	START_GAME,
	MOVE_UP,
	MOVE_DOWN,
	MOVE_LEFT,
	MOVE_RIGHT,
	SKIP_LEVEL,
	RESTART_LEVEL,
	BUTTON_PRESS
};

class PlayerActionEvent : public GameEvent
{
public:

	PlayerActionEvent(const PlayerAction& action)
		: GameEvent(GameEventType::PLAYER_ACTION_EVENT), mAction(action) {};
	PlayerActionEvent(const PlayerAction& action, Vector2D pos)
		: GameEvent(GameEventType::PLAYER_ACTION_EVENT), mAction(action), mPos(pos) {};
	~PlayerActionEvent() {};

	inline PlayerAction getAction() const{ return mAction; };
	inline Vector2D getPos() const { return mPos; };

private:

	PlayerAction mAction;
	Vector2D mPos = Vector2D(0,0);

};

