#include "Font.h"

#include <allegro5/allegro_ttf.h>

/// <summary>
/// Creates a Font instance based off of a .ttf font file and font size.
/// </summary>
/// <param name="pFilename">: File path to font file.</param>
/// <param name="fontSize">: Size of font.</param>
/// <exception cref="FontNotLoaded"></exception>
Font::Font( const char * pFilename, const int fontSize )
{
    mpFont = al_load_ttf_font( pFilename, fontSize, 0 );
    assert( mpFont );
    mFontSize = fontSize;
}

/// <summary>
/// Clears font from memory.
/// </summary>
Font::~Font()
{
    al_destroy_font( mpFont );
}

/// <summary>
/// Gets the size of the font.
/// </summary>
/// <returns>Int of font size promising no changes will be made.</returns>
int Font::getFontSize() const
{
    return mFontSize;
}
